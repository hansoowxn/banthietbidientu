        <div id="successToast" class="toast align-items-center text-white bg-success border-0 shadow-lg" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body fs-6 fw-bold"><i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        let currentBasePrice = 0;
        let selectedCapacityPrice = 0;
        let currentQuantity = 1; // Biến lưu số lượng

        document.addEventListener('DOMContentLoaded', function () {
            var modalElement = document.getElementById('productOptionModal');
            document.body.appendChild(modalElement);

            var toastEl = document.getElementById('successToast');
            if (toastEl) {
                var toast = new bootstrap.Toast(toastEl, { delay: 3000 });
                toast.show();
            }
        });

        // Nhận thêm tham số category
        function openOptionModal(id, name, price, img, category) {
            document.getElementById('inputProductId').value = id;
            document.getElementById('modalName').innerText = name;
            document.getElementById('modalImg').src = img;
            currentBasePrice = price;
            selectedCapacityPrice = 0;

            // Reset số lượng về 1 mỗi khi mở modal
            currentQuantity = 1;
            document.getElementById('modalQuantityInput').value = 1;
            document.getElementById('inputQuantity').value = 1;

            renderOptions(category);
            updatePriceDisplay();

            var myModal = new bootstrap.Modal(document.getElementById('productOptionModal'));
            myModal.show();
        }

        // Hàm cập nhật số lượng (+ / -)
        function updateModalQuantity(change) {
            let newVal = currentQuantity + change;
            if (newVal >= 1) {
                currentQuantity = newVal;
                // Cập nhật UI
                document.getElementById('modalQuantityInput').value = newVal;
                // Cập nhật input ẩn để gửi form
                document.getElementById('inputQuantity').value = newVal;
                // Cập nhật lại giá tổng
                updatePriceDisplay();
            }
        }

        function renderOptions(category) {
            const storageDiv = document.getElementById('storageOptions');
            const colorDiv = document.getElementById('colorOptions');
            const inputCap = document.getElementById('inputCapacity');
            const inputColor = document.getElementById('inputColor');
            const storageSection = document.getElementById('storageSection');
            const storageLabel = document.getElementById('storageLabel');

            // Dữ liệu giả lập
            const mobileCaps = [{ label: '128GB', priceAdd: 0 }, { label: '256GB', priceAdd: 1500000 }, { label: '512GB', priceAdd: 3000000 }];
            const laptopCaps = [{ label: '8GB/256GB', priceAdd: 0 }, { label: '16GB/512GB', priceAdd: 2000000 }, { label: '32GB/1TB', priceAdd: 5000000 }];
            const watchCaps = [{ label: '40mm', priceAdd: 0 }, { label: '44mm', priceAdd: 800000 }];
            const colors = [{ name: 'Đen', code: '#1b1b1d' }, { name: 'Trắng', code: '#f2f2f2' }, { name: 'Xanh Dương', code: '#0071e3' }, { name: 'Vàng', code: '#ffcc00' }];

            // Logic phân loại
            if (category === 'Phụ kiện') {
                storageSection.style.display = 'none';
                inputCap.value = "";
                selectedCapacityPrice = 0;
            }
            else if (category === 'Laptop') {
                storageSection.style.display = 'block';
                storageLabel.innerText = 'CHỌN CẤU HÌNH (RAM/SSD):';
                renderCapacityButtons(laptopCaps, storageDiv, inputCap);
            }
            else if (category === 'Smartwatch' || category === 'Đồng hồ') {
                storageSection.style.display = 'block';
                storageLabel.innerText = 'CHỌN KÍCH THƯỚC MẶT:';
                renderCapacityButtons(watchCaps, storageDiv, inputCap);
            }
            else {
                storageSection.style.display = 'block';
                storageLabel.innerText = 'CHỌN PHIÊN BẢN (BỘ NHỚ):';
                renderCapacityButtons(mobileCaps, storageDiv, inputCap);
            }

            // Render Color
            colorDiv.innerHTML = '';
            inputColor.value = colors[0].name;
            document.getElementById('colorName').innerText = colors[0].name;
            colors.forEach((col, index) => {
                let btn = document.createElement('div');
                btn.className = `color-btn ${index === 0 ? 'active' : ''}`;
                btn.style.backgroundColor = col.code;
                btn.onclick = function() {
                    document.querySelectorAll('#colorOptions .color-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    inputColor.value = col.name;
                    document.getElementById('colorName').innerText = col.name;
                };
                colorDiv.appendChild(btn);
            });
        }

        function renderCapacityButtons(dataArray, container, inputElement) {
            container.innerHTML = '';
            inputElement.value = dataArray[0].label;
            selectedCapacityPrice = dataArray[0].priceAdd;

            dataArray.forEach((cap, index) => {
                let btn = document.createElement('div');
                btn.className = `option-btn ${index === 0 ? 'active' : ''}`;
                btn.innerText = cap.label;
                btn.onclick = function() {
                    document.querySelectorAll('#storageOptions .option-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    selectedCapacityPrice = cap.priceAdd;
                    inputElement.value = cap.label;
                    updatePriceDisplay();
                };
                container.appendChild(btn);
            });
        }

        function updatePriceDisplay() {
            let unitPrice = currentBasePrice + selectedCapacityPrice;
            // Tính tổng tiền = Giá đơn vị * Số lượng
            let totalPrice = unitPrice * currentQuantity;
            document.getElementById('modalPrice').innerText = totalPrice.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
        }
    </script>
}