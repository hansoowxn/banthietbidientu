<!-- Modal Thêm Nhanh -->
<div class="modal fade" id="productOptionModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header border-bottom-0 pb-0">
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body pt-0">
                <div class="d-flex align-items-center my-3">
                    <img id="modalImg" src="" class="rounded border me-3" style="width: 80px; height: 80px; object-fit: contain;">
                    <div>
                        <h5 id="modalName" class="fw-bold text-dark mb-1"></h5>
                        <h4 id="modalPrice" class="fw-bold text-primary mb-0"></h4>
                    </div>
                </div>
                <hr class="opacity-25">

                <!-- PHẦN CHỌN BIẾN THỂ -->
                <div class="mb-3" id="storageSection">
                    <label class="fw-bold mb-2 text-muted small text-uppercase" id="storageLabel">Chọn phiên bản:</label>
                    <div class="d-flex flex-wrap gap-2" id="storageOptions"></div>
                </div>

                <!-- PHẦN CHỌN MÀU -->
                <div class="mb-4" id="colorSection">
                    <label class="fw-bold mb-2 text-muted small text-uppercase">Chọn màu sắc:</label>
                    <div class="d-flex gap-3" id="colorOptions"></div>
                    <div id="colorName" class="small text-muted mt-1"></div>
                </div>

                <!-- PHẦN CHỌN SỐ LƯỢNG (MỚI THÊM) -->
                <div class="mb-4">
                    <label class="fw-bold mb-2 text-muted small text-uppercase">Số lượng:</label>
                    <div class="input-group" style="width: 140px;">
                        <button class="btn btn-outline-secondary" type="button" onclick="updateModalQuantity(-1)"><i class="bi bi-dash"></i></button>
                        <input type="number" class="form-control text-center fw-bold bg-white" id="modalQuantityInput" value="1" min="1" readonly>
                        <button class="btn btn-outline-secondary" type="button" onclick="updateModalQuantity(1)"><i class="bi bi-plus"></i></button>
                    </div>
                </div>

                <form id="addToCartForm" asp-controller="GioHang" asp-action="Add" method="post">
                    <input type="hidden" name="id" id="inputProductId" />
                    <input type="hidden" name="capacity" id="inputCapacity" />
                    <input type="hidden" name="color" id="inputColor" />
                    <!-- Input ẩn để gửi số lượng chính xác về server -->
                    <input type="hidden" name="quantity" id="inputQuantity" value="1" />

                    <button type="submit" class="btn btn-primary w-100 py-2 fw-bold rounded-pill shadow-sm">XÁC NHẬN THÊM VÀO GIỎ</button>
                </form>
            </div>
        </div>
    </div>
</div>

