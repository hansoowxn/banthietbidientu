@model TestDoAn.Models.ChinhSuaTaiKhoan
@{
    ViewData["Title"] = "Chỉnh sửa tài khoản - SmartTech";
}

@section Styles {
    <style>
        .form-floating > .form-control:focus ~ label,
        .form-floating > .form-control:not(:placeholder-shown) ~ label,
        .form-floating > .form-select ~ label {
            transform: scale(0.85) translateY(-0.75rem) translateX(0.15rem);
            background-color: #fff;
            padding: 0 0.25rem;
        }
    </style>
}

<section class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4 p-md-5">

                    <div class="text-center mb-4">
                        <i class="bi bi-person-vcard-fill display-3 text-success"></i>
                        <h2 class="h3 fw-bold mt-3 mb-0">Chỉnh sửa thông tin</h2>
                    </div>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success text-center p-2 small" role="alert">
                            @TempData["Success"]
                        </div>
                    }
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger p-2 small" role="alert">
                            <ul class="mb-0 ps-3">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <form asp-action="EditProfile" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-floating mb-3">
                            <input asp-for="FullName" class="form-control" id="floatingFullName" placeholder="Họ và Tên" />
                            <label for="floatingFullName">Họ và Tên</label>
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="row g-2 mb-3">
                            <div class="col-md">
                                <div class="form-floating">
                                    <input asp-for="DateOfBirth" class="form-control" type="date" id="floatingDate" placeholder="Ngày sinh" />
                                    <label for="floatingDate">Ngày sinh</label>
                                    <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md">
                                <div class="form-floating">
                                    <select asp-for="Gender" class="form-select" id="floatingGender">
                                        <option value="Nam">Nam</option>
                                        <option value="Nữ">Nữ</option>
                                        <option value="Khác">Khác</option>
                                    </select>
                                    <label for="floatingGender">Giới tính</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Address" class="form-control" id="floatingAddress" placeholder="Địa chỉ" />
                            <label for="floatingAddress">Địa chỉ</label>
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" type="email" id="floatingEmail" placeholder="Email" />
                            <label for="floatingEmail">Email</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div classs="d-grid gap-2 d-md-flex justify-content-md-between">
                            <a asp-action="Profile" asp-controller="Login" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-lg me-2"></i> Hủy
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-lg me-2"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}