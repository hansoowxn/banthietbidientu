@model TestDoAn.Models.TaiKhoan
@{
    ViewData["Title"] = "Tài khoản - SmartTech";
}

<section class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            @if (Model != null)
            {
                <div class="card shadow-sm border-0 rounded-3">
                    <div class="card-body p-4 p-md-5">

                        <div class="text-center mb-4">
                            <i class="bi bi-person-circle display-3 text-primary"></i>
                            <h2 class="h3 fw-bold mt-3 mb-1">Xin chào, @Model.FullName!</h2>
                            <p class="text-muted">Đây là trang thông tin cá nhân của bạn.</p>
                        </div>

                        <ul class="list-group list-group-flush mb-4">
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <span class_="text-muted">Tên đăng nhập</span>
                                <strong class="text-dark">@Model.Username</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <span class="text-muted">Họ và Tên</span>
                                <strong class="text-dark">@Model.FullName</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <span class="text-muted">Ngày sinh</span>
                                <strong class="text-dark">@Model.DateOfBirth.ToString("dd/MM/yyyy")</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <span class="text-muted">Giới tính</span>
                                <strong class="text-dark">@Model.Gender</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <span class="text-muted">Địa chỉ</span>
                                <strong class="text-dark">@(Model.Address ?? "Chưa cung cấp")</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <span class="text-muted">Email</span>
                                <strong class="text-dark">@Model.Email</strong>
                            </li>
                        </ul>

                        <h5 class="h6 text-muted mb-3">Hành động</h5>
                        <div class="list-group">
                            <a asp-action="EditProfile" asp-controller="Login" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-pencil-fill me-2"></i>Chỉnh sửa thông tin</span>
                                <i class="bi bi-chevron-right"></i>
                            </a>
                            <a asp-action="ChangePassword" asp-controller="Login" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-key-fill me-2"></i>Đổi mật khẩu</span>
                                <i class="bi bi-chevron-right"></i>
                            </a>
                            <a asp-action="LichSuMuaHang" asp-controller="Login" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-clock-history me-2"></i>Lịch sử mua hàng</span>
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </div>

                        <hr class="my-4">

                        <form asp-action="Logout" asp-controller="Login" method="post" class="d-grid">
                            <button type="submit" class="btn btn-outline-danger btn-lg">
                                <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                            </button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-sm border-0 rounded-3">
                    <div class="card-body p-4 p-md-5 text-center">
                        <i class="bi bi-exclamation-triangle-fill display-3 text-warning"></i>
                        <h2 class="h3 fw-bold mt-3 mb-3">Bạn chưa đăng nhập</h2>
                        <p class="text-muted mb-4">Vui lòng đăng nhập để xem thông tin tài khoản.</p>
                        <a asp-action="DangNhap" asp-controller="Login" class="btn btn-primary btn-lg">Đăng nhập ngay</a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>