@model List<TestDoAn.Models.LichSuMuaHang>

<!-- Main Section with Padding Top -->
<section class="container py-6" style="padding-top: 80px;">
    <div class="row justify-content-center">
        <div class="col-12 text-center">
            <h1 class="display-5 fw-bold text-dark mb-4" style="letter-spacing: 1px;">Lịch sử mua hàng</h1>
            <hr class="border-primary border-2 w-25 mx-auto mb-5">
        </div>
    </div>

    <!-- Info Alert -->
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show text-center mb-5" role="alert" style="max-width: 600px; margin: 0 auto; border-radius: 10px;">
            @TempData["Info"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Purchase History Table -->
    @if (Model.Any())
    {
        <div class="card border-0 shadow-sm mb-5" style="border-radius: 15px; overflow: hidden;">
            <div class="card-header bg-light text-dark py-3" style="background: linear-gradient(90deg, #f8f9fa, #e9ecef);">
                <h4 class="mb-0 fw-semibold">Danh sách giao dịch</h4>
            </div>
            <div class="card-body p-4">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr class="bg-light">
                                <th scope="col" class="text-center py-3 text-muted">Hình ảnh</th>
                                <th scope="col" class="text-center py-3 text-muted">Tên sản phẩm</th>
                                <th scope="col" class="text-center py-3 text-muted">Giá</th>
                                <th scope="col" class="text-center py-3 text-muted">Số lượng</th>
                                <th scope="col" class="text-center py-3 text-muted">Ngày mua</th>
                                <th scope="col" class="text-center py-3 text-muted">Phương thức</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="border-bottom">
                                    <td class="text-center py-3"><img src="@(item.ImageUrl ?? "/images/default.jpg")" alt="@item.Name" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;" /></td>
                                    <td class="text-center py-3">@item.Name</td>
                                    <td class="text-center py-3">@item.Price.ToString("#,##0").Replace(",", ".") VNĐ</td>
                                    <td class="text-center py-3">@item.Quantity</td>
                                    <td class="text-center py-3">@item.PurchaseDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="text-center py-3">@item.PaymentMethod</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-6" style="min-height: 300px; display: flex; align-items: center; justify-content: center;">
            <div>
                <i class="bi bi-cart-x fs-1 text-secondary mb-3"></i>
                <h4 class="text-muted mb-0">Bạn chưa có lịch sử mua hàng.</h4>
            </div>
        </div>
    }

    <!-- Back Button -->
    <div class="text-center">
        <a asp-action="Profile" class="btn btn-outline-primary btn-lg fw-medium py-2 px-4" style="border-radius: 25px; transition: all 0.3s ease;">
            Quay lại hồ sơ
        </a>
    </div>
</section>

<!-- Custom Styles -->
<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
        }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.05);
        transition: background-color 0.2s ease;
    }

    .btn-outline-primary {
        border-width: 2px;
    }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: #fff;
            border-color: #007bff;
        }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"></script>
}