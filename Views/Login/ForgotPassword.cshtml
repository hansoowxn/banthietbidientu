@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-body p-4 text-center">
                    <div class="mb-4">
                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 70px; height: 70px;">
                            <i class="bi bi-key fs-1"></i>
                        </div>
                    </div>
                    <h4 class="fw-bold mb-2">Quên mật khẩu?</h4>
                    <p class="text-muted mb-4 small">Nhập email của bạn để nhận mã xác thực (OTP).</p>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger small text-start">
                            <i class="bi bi-exclamation-circle me-1"></i> @ViewBag.Error
                        </div>
                    }

                    <form asp-action="ForgotPassword" method="post">
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control rounded-3" id="emailInput" name="email" placeholder="name@example.com" required>
                            <label for="emailInput">Địa chỉ Email</label>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary fw-bold py-2 rounded-pill shadow-sm">
                                Gửi mã OTP <i class="bi bi-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </form>

                    <div class="mt-4 text-muted small">
                        <a asp-action="DangNhap" class="text-decoration-none fw-bold text-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Quay lại đăng nhập
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>