@{
    ViewData["Title"] = "Hệ thống CSKH";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var currentUser = User.Identity.Name;
    bool isBoss = ViewBag.IsBoss ?? false; // Nhận biến từ Controller
}

<div class="container-fluid py-3">
    <div class="chat-container bg-white rounded shadow-sm overflow-hidden" style="height: 85vh; display: flex;">
        <div class="chat-sidebar border-end d-flex flex-column" style="width: 320px;">
            <div class="p-3 border-bottom bg-light">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="fw-bold text-primary mb-0"><i class="bi bi-chat-quote-fill me-2"></i>Tin nhắn</h5>

                    @if (isBoss)
                    {
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="filterDropdown" data-bs-toggle="dropdown">
                                <i class="bi bi-funnel"></i> Tất cả
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow">
                                <li><a class="dropdown-item" href="#" onclick="filterByStore(0, 'Tất cả')">Tất cả</a></li>
                                <li><a class="dropdown-item" href="#" onclick="filterByStore(1, 'Hà Nội')">Miền Bắc (HN)</a></li>
                                <li><a class="dropdown-item" href="#" onclick="filterByStore(2, 'Đà Nẵng')">Miền Trung (ĐN)</a></li>
                                <li><a class="dropdown-item" href="#" onclick="filterByStore(3, 'TP.HCM')">Miền Nam (HCM)</a></li>
                            </ul>
                        </div>
                    }
                </div>

                <input type="text" class="form-control rounded-pill" placeholder="Tìm khách hàng..." id="searchUser" onkeyup="filterUsers()">
            </div>
            <div id="contactList" class="flex-grow-1 overflow-auto">
                <div class="text-center py-5 text-muted"><div class="spinner-border spinner-border-sm text-primary"></div> Đang tải...</div>
            </div>
        </div>

        <div class="chat-main flex-grow-1 d-flex flex-column bg-light position-relative">
            <div id="chatHeader" class="p-3 border-bottom bg-white shadow-sm d-flex align-items-center" style="height: 65px;">
                <span class="text-muted fst-italic ms-3">Chọn một cuộc hội thoại để bắt đầu...</span>
            </div>
            <div id="chatBox" class="flex-grow-1 p-3 overflow-auto d-flex flex-column gap-3"></div>
            <div class="p-3 bg-white border-top d-none" id="chatInputArea">
                <div class="input-group">
                    <input type="text" id="adminMsgInput" class="form-control" placeholder="Nhập tin nhắn..." onkeypress="handleAdminEnter(event)">
                    <button class="btn btn-primary" onclick="sendAdminMessage()"><i class="bi bi-send-fill"></i></button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .user-item {
        padding: 12px 15px;
        border-bottom: 1px solid #f0f0f0;
        cursor: pointer;
        transition: 0.2s;
        display: flex;
        align-items: center;
    }

        .user-item:hover, .user-item.active {
            background-color: #eef5ff;
        }

        .user-item.unread {
            border-left: 4px solid #0d6efd;
            background-color: #f8fbff;
        }

    .msg {
        max-width: 70%;
        padding: 10px 15px;
        border-radius: 15px;
        font-size: 0.95rem;
        word-wrap: break-word;
        position: relative;
    }

    .msg-sent {
        align-self: flex-end;
        background-color: #0d6efd;
        color: white;
        border-bottom-right-radius: 2px;
    }

    .msg-received {
        align-self: flex-start;
        background-color: white;
        color: #333;
        border-bottom-left-radius: 2px;
        box-shadow: 0 1px 2px rgba(0,0,0,0.1);
    }

    .msg-time {
        font-size: 0.65rem;
        margin-top: 4px;
        opacity: 0.7;
        text-align: right;
    }
</style>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
    <script>
        const currentUser = '@currentUser';
        const myStoreId = @(ViewBag.CurrentStoreId ?? 0);
        let currentChatUser = '';
        let activeFilterStoreId = 0; // Biến lưu bộ lọc hiện tại

        const connection = new signalR.HubConnectionBuilder().withUrl("/chatHub").build();
        connection.start().then(() => {
            console.log("Admin Connected. StoreId: " + myStoreId);
            loadContacts();
        }).catch(err => console.error(err));

        connection.on("ReceiveMessage", function (user, message, time) {
            if (user === currentChatUser || (user === currentUser && currentChatUser !== '')) {
                let type = user === currentUser ? 'sent' : 'received';
                if(user !== currentUser) { appendMessage(message, type, time); scrollToBottom(); }
            }
            if (user !== currentUser) { loadContacts(); playNotificationSound(); }
        });

        // Hàm lọc cho Boss
        function filterByStore(storeId, label) {
            activeFilterStoreId = storeId;
            document.getElementById('filterDropdown').innerHTML = `<i class="bi bi-funnel-fill"></i> ${label}`;
            loadContacts(); // Tải lại danh sách với bộ lọc mới
        }

        function loadContacts() {
            // Gửi kèm filterStoreId lên Server
            fetch(`/Chat/GetContacts?filterStoreId=${activeFilterStoreId}`)
                .then(r => r.json()).then(data => {
                const list = document.getElementById('contactList');
                list.innerHTML = '';
                data.forEach(u => {
                    let active = u.username === currentChatUser ? 'active' : '';
                    let unread = u.unread > 0 ? 'unread' : '';

                    // Icon khác nhau cho Boss, Admin, User
                    let iconHtml = '';
                    if (u.priority === 1) iconHtml = '<i class="bi bi-star-fill text-warning fs-3 me-3" title="Boss/Admin"></i>'; // Boss/Admin ghim
                    else if (u.priority === 2) iconHtml = '<i class="bi bi-person-badge-fill text-primary fs-3 me-3" title="Admin"></i>';
                    else iconHtml = '<i class="bi bi-person-circle text-secondary fs-3 me-3"></i>'; // Khách

                    let html = `
                        <div class="user-item ${active} ${unread}" onclick="openChat('${u.username}', '${u.fullName}')" data-name="${u.fullName} ${u.username}">
                            ${iconHtml}
                            <div class="flex-grow-1 overflow-hidden">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0 text-truncate text-dark fw-bold" style="max-width: 120px;">${u.fullName}</h6>
                                    <small class="text-muted" style="font-size: 10px;">${u.time}</small>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted text-truncate d-block" style="max-width: 130px;">${u.lastMessage}</small>
                                    ${u.unread > 0 ? `<span class="badge bg-danger rounded-pill">${u.unread}</span>` : ''}
                                </div>
                            </div>
                        </div>`;
                    list.insertAdjacentHTML('beforeend', html);
                });
            });
        }

        function openChat(username, fullname) {
            currentChatUser = username;

            // Cập nhật Header
            document.getElementById('chatHeader').innerHTML = `<h6 class="mb-0 fw-bold ms-3"><i class="bi bi-person-lines-fill me-2"></i>${fullname}</h6>`;
            document.getElementById('chatInputArea').classList.remove('d-none');

            // [FIX LỖI 3] Xóa nội dung cũ ngay lập tức & hiện Loading
            var box = document.getElementById('chatBox');
            box.innerHTML = '<div class="text-center mt-5"><div class="spinner-border text-primary"></div></div>';

            fetch('/Chat/GetHistory?otherUser=' + encodeURIComponent(username))
                .then(r => r.json())
                .then(msgs => {
                    box.innerHTML = ''; // Xóa loading
                    if (msgs.length === 0) {
                        box.innerHTML = '<div class="text-center text-muted mt-5">Chưa có nội dung chat.</div>';
                    } else {
                        msgs.forEach(m => {
                            let type = m.sender === currentUser ? 'sent' : 'received';
                            appendMessage(m.content, type, m.time);
                        });
                        scrollToBottom();
                    }
                    loadContacts();
                })
                .catch(err => {
                    console.error(err);
                    box.innerHTML = '<div class="text-center text-danger mt-5">Lỗi tải dữ liệu.</div>';
                });
        }

        function sendAdminMessage() {
            let msg = document.getElementById('adminMsgInput').value.trim();
            if (!msg) return;
            connection.invoke("SendMessage", currentUser, currentChatUser, msg, myStoreId).catch(err => alert("Lỗi: " + err));
            appendMessage(msg, 'sent', 'Vừa xong');
            scrollToBottom();
            document.getElementById('adminMsgInput').value = '';
        }

        function appendMessage(text, type, time) {
            let html = `<div class="msg msg-${type}">${text}<div class="msg-time">${time}</div></div>`;
            document.getElementById('chatBox').insertAdjacentHTML('beforeend', html);
        }

        function scrollToBottom() { const box = document.getElementById('chatBox'); box.scrollTop = box.scrollHeight; }
        function handleAdminEnter(e) { if(e.key === 'Enter') sendAdminMessage(); }

        function filterUsers() {
            let input = document.getElementById('searchUser').value.toLowerCase();
            let items = document.getElementsByClassName('user-item');
            for (let i = 0; i < items.length; i++) {
                let name = items[i].getAttribute('data-name').toLowerCase();
                items[i].style.display = name.includes(input) ? "flex" : "none";
            }
        }
        function playNotificationSound() { var a = new Audio('https://assets.mixkit.co/sfx/preview/mixkit-message-pop-alert-2354.mp3'); a.play().catch(e=>{}); }
    </script>
}