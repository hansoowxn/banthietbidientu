@{
    ViewData["Title"] = "Thanh toán - Electronic Store";
}

@model TestDoAn.Models.ThanhToanViewModel

<section class="container my-5">
    <h2 class="mb-4 text-center fw-bold">Thanh toán đơn hàng</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row g-4">
        <!-- Cột trái: Thông tin giỏ hàng và người mua -->
        <div class="col-lg-7">
            <!-- Thông tin giỏ hàng -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Sản phẩm trong giỏ hàng</h4>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Hình ảnh</th>
                                <th>Giá</th>
                                <th>Số lượng</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GioHangs)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td><img src="@item.ImageUrl" alt="@item.Name" class="img-fluid" style="max-width: 80px;" /></td>
                                    <td>@(item.Price.ToString("#,##0").Replace(",", ".")) VNĐ</td>
                                    <td>@item.Quantity</td>
                                    <td>@((item.Price * item.Quantity).ToString("#,##0").Replace(",", ".")) VNĐ</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="4" class="text-end fw-bold">Tổng cộng:</td>
                                <td class="fw-bold">@(Model.GioHangs.Sum(item => item.Price * item.Quantity).ToString("#,##0").Replace(",", ".")) VNĐ</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <!-- Thông tin người mua và địa chỉ giao hàng -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Thông tin người mua</h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold">Họ và tên</dt>
                        <dd class="col-sm-8">@Model.TaiKhoan.FullName</dd>
                        <dt class="col-sm-4 fw-bold">Email</dt>
                        <dd class="col-sm-8">@Model.TaiKhoan.Email</dd>
                        <dt class="col-sm-4 fw-bold">Địa chỉ tài khoản</dt>
                        <dd class="col-sm-8">@(Model.TaiKhoan.Address ?? "Chưa cung cấp")</dd>
                    </dl>
                    <div class="mt-3">
                        <label for="deliveryAddress" class="form-label fw-bold">Địa chỉ giao hàng</label>
                        <textarea class="form-control" id="deliveryAddress" name="deliveryAddress" rows="3" placeholder="Nhập địa chỉ giao hàng (tùy chọn, nếu khác với địa chỉ tài khoản)"></textarea>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cột phải: Phương thức thanh toán và voucher -->
        <div class="col-lg-5">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Phương thức thanh toán</h4>
                </div>
                <div class="card-body">
                    <form asp-action="XacNhanThanhToan" asp-controller="GioHang" method="post">
                        <div class="mb-4">
                            <label class="form-label fw-bold">Chọn phương thức thanh toán</label>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="paymentMethod" id="bank" value="Bank" checked>
                                <label class="form-check-label" for="bank">Ngân hàng</label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="paymentMethod" id="cod" value="COD">
                                <label class="form-check-label" for="cod">COD (Thanh toán khi nhận hàng)</label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="paymentMethod" id="wallet" value="Wallet">
                                <label class="form-check-label" for="wallet">Ví điện tử</label>
                            </div>
                        </div>
                        
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success w-100">Xác nhận thanh toán</button>
                            <a asp-action="Index" asp-controller="GioHang" class="btn btn-outline-secondary w-100">Quay lại giỏ hàng</a>
                        </div>
                        @Html.AntiForgeryToken()
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .card {
        border-radius: 10px;
        transition: box-shadow 0.3s;
    }

    .card:hover {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .form-check-input:checked {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        transition: background-color 0.3s;
    }

    .btn-success:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }

    .btn-outline-secondary {
        transition: background-color 0.3s;
    }

    .btn-outline-secondary:hover {
        background-color: #f8f9fa;
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}