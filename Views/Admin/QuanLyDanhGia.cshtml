@model IEnumerable<banthietbidientu.Models.DanhGia>

@{
    ViewData["Title"] = "Quản lý Đánh giá & Bình luận";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* --- HIỆU ỨNG HIGHLIGHT --- */
    @@keyframes flash-animation {
        0% {
            background-color: #ffc107;
        }
        /* Vàng đậm */
        50% {
            background-color: #fff3cd;
        }
        /* Vàng nhạt */
        100% {
            background-color: transparent;
        }
    }

    .row-highlight {
        animation: flash-animation 5s ease-out forwards;
    }

        .row-highlight > td {
            background-color: #fff3cd !important;
            transition: background-color 2s ease-out;
        }

    .star-rating {
        color: #ffc107;
        font-size: 0.9rem;
    }
</style>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="bi bi-star-half me-2"></i>Quản lý Đánh giá</h2>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="ps-4">Sản phẩm</th>
                            <th>Khách hàng</th>
                            <th style="width: 120px;">Đánh giá</th>
                            <th>Nội dung</th>
                            <th>Trạng thái</th>
                            <th class="text-end pe-4">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row-@item.Id" class="data-row">
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        @if (item.SanPham != null)
                                        {
                                            <img src="@item.SanPham.ImageUrl" class="rounded border me-2" style="width: 45px; height: 45px; object-fit: cover;">
                                            <div>
                                                <div class="fw-bold text-dark small">@item.SanPham.Name</div>
                                                <div class="text-muted" style="font-size: 0.75rem;">ID: #@item.SanPhamId</div>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-danger">Sản phẩm đã xóa</span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-bold text-dark">@(item.TaiKhoan?.FullName ?? "Khách ẩn danh")</div>
                                    <div class="small text-muted">@item.NgayTao.ToString("dd/MM/yyyy HH:mm")</div>
                                </td>
                                <td>
                                    <div class="star-rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= item.Sao)
                                            {
                                                <i class="bi bi-star-fill"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star text-secondary opacity-25"></i>
                                            }
                                        }
                                    </div>
                                </td>
                                <td style="max-width: 300px;">
                                    <div class="text-break">@item.NoiDung</div>
                                    @if (!string.IsNullOrEmpty(item.TraLoi))
                                    {
                                        <div class="mt-2 p-2 bg-light rounded border-start border-3 border-primary">
                                            <small class="d-block fw-bold text-primary">Admin trả lời:</small>
                                            <small class="text-secondary">@item.TraLoi</small>
                                        </div>
                                    }
                                </td>
                                <td>
                                    @if (item.DaDuyet)
                                    {
                                        <span class="badge bg-success" onclick="toggleDuyet(@item.Id)" style="cursor:pointer;">
                                            <i class="bi bi-check-circle"></i> Đã duyệt
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark" onclick="toggleDuyet(@item.Id)" style="cursor:pointer;">
                                            <i class="bi bi-eye-slash"></i> Ẩn
                                        </span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <button class="btn btn-sm btn-outline-primary me-1"
                                            data-bs-toggle="modal"
                                            data-bs-target="#replyModal-@item.Id"
                                            title="Trả lời">
                                        <i class="bi bi-reply-fill"></i>
                                    </button>

                                    <form asp-action="XoaDanhGia" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc muốn xóa đánh giá này?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>

                                    <div class="modal fade" id="replyModal-@item.Id" tabindex="-1">
                                        <div class="modal-dialog">
                                            <form asp-action="TraLoiDanhGia" method="post">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title fw-bold">Trả lời đánh giá</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body text-start">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <div class="mb-3">
                                                            <label class="form-label text-muted">Nội dung đánh giá:</label>
                                                            <p class="p-2 bg-light rounded fst-italic">"@item.NoiDung"</p>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label fw-bold">Nội dung trả lời:</label>
                                                            <textarea name="noiDungTraLoi" class="form-control" rows="4" required placeholder="Nhập câu trả lời của bạn...">@item.TraLoi</textarea>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                        <button type="submit" class="btn btn-primary">Gửi trả lời</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @if (!Model.Any())
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-chat-square-text fs-1"></i>
                        <p class="mt-2">Chưa có đánh giá nào.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Logic Highlight từ URL
            const params = new URLSearchParams(window.location.search);
            const highlightId = params.get('highlightId');

            if (highlightId) {
                const row = document.getElementById('row-' + highlightId);
                if (row) {
                    row.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    row.classList.add('row-highlight');
                    setTimeout(() => {
                        row.classList.remove('row-highlight');
                    }, 5000);
                }
            }
        });

        // Hàm AJAX duyệt nhanh (nếu bạn muốn dùng)
        function toggleDuyet(id) {
            fetch('/Admin/DuyetDanhGia?id=' + id, { method: 'POST' })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Lỗi khi cập nhật trạng thái');
                    }
                });
        }
    </script>
}