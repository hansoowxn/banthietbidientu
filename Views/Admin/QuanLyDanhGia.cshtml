@model IEnumerable<banthietbidientu.Models.DanhGia>

@{
    ViewData["Title"] = "Quản lý đánh giá";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="bi bi-star-half me-2"></i>Quản lý Đánh giá & Bình luận</h2>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="ps-4 py-3">Sản phẩm</th>
                            <th>Khách hàng</th>
                            <th>Đánh giá</th>
                            <th style="width: 30%;">Nội dung</th>
                            <th>Trạng thái</th>
                            <th class="text-end pe-4">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <img src="@(item.SanPham?.ImageUrl ?? "/image/logo.png")"
                                             class="rounded border me-3"
                                             style="width: 40px; height: 40px; object-fit: cover;"
                                             onerror="this.src='/image/logo.png'">
                                        <div>
                                            <div class="fw-bold text-dark">@(item.SanPham?.Name ?? "SP đã xóa")</div>
                                            <div class="small text-muted">ID: #@item.SanPhamId</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-bold">@(item.TaiKhoan?.FullName ?? "Ẩn danh")</div>
                                    <div class="small text-muted">@item.NgayTao.ToString("dd/MM/yyyy HH:mm")</div>
                                </td>
                                <td>
                                    <div class="text-warning small">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="bi @(i <= item.Sao ? "bi-star-fill" : "bi-star")"></i>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <p class="mb-1 text-break">@item.NoiDung</p>
                                    @if (!string.IsNullOrEmpty(item.HinhAnh))
                                    {
                                        <a href="@item.HinhAnh" target="_blank">
                                            <img src="@item.HinhAnh" class="rounded border mt-1" style="height: 50px; cursor: zoom-in;" alt="Ảnh review">
                                        </a>
                                    }

                                    @if (!string.IsNullOrEmpty(item.TraLoi))
                                    {
                                        <div class="mt-2 p-2 bg-light rounded border-start border-4 border-primary small">
                                            <strong class="text-primary"><i class="bi bi-arrow-return-right"></i> Shop trả lời:</strong>
                                            <span class="text-muted fst-italic">@item.TraLoi</span>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input toggle-status" type="checkbox"
                                               data-id="@item.Id"
                                               style="cursor: pointer;"
                                        @(item.DaDuyet ? "checked" : "")>
                                        <label class="form-check-label small text-muted">
                                            @(item.DaDuyet ? "Hiện" : "Ẩn")
                                        </label>
                                    </div>
                                </td>
                                <td class="text-end pe-4">
                                    <button class="btn btn-sm btn-outline-primary me-1"
                                            data-bs-toggle="modal"
                                            data-bs-target="#replyModal-@item.Id"
                                            title="Trả lời">
                                        <i class="bi bi-reply-fill"></i>
                                    </button>

                                    <div class="modal fade" id="replyModal-@item.Id" tabindex="-1">
                                        <div class="modal-dialog">
                                            <form asp-action="TraLoiDanhGia" method="post">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title fw-bold">Trả lời khách hàng: @(item.TaiKhoan?.FullName)</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body text-start">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <div class="mb-3">
                                                            <label class="form-label fw-bold">Nội dung đánh giá:</label>
                                                            <p class="bg-light p-3 rounded fst-italic">"@item.NoiDung"</p>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label fw-bold">Câu trả lời của Shop:</label>
                                                            <textarea name="noiDungTraLoi" class="form-control" rows="4" placeholder="Nhập câu trả lời..." required>@item.TraLoi</textarea>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                                        <button type="submit" class="btn btn-primary">Gửi trả lời</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!Model.Any())
                {
                    <div class="text-center py-5">
                        <i class="bi bi-chat-square-quote text-muted opacity-25" style="font-size: 4rem;"></i>
                        <p class="text-muted mt-3">Chưa có đánh giá nào.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Xử lý nút gạt Duyệt/Ẩn không cần load lại trang (AJAX)
        document.querySelectorAll('.toggle-status').forEach(toggle => {
            toggle.addEventListener('change', function() {
                const id = this.getAttribute('data-id');
                const label = this.nextElementSibling;

                fetch('/Admin/DuyetDanhGia', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `id=${id}`
                })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        label.innerText = data.newStatus ? "Hiện" : "Ẩn";
                        // Hiệu ứng nháy xanh nhẹ để báo thành công
                        label.classList.add('text-success', 'fw-bold');
                        setTimeout(() => label.classList.remove('text-success', 'fw-bold'), 1000);
                    } else {
                        alert("Lỗi khi cập nhật trạng thái!");
                        this.checked = !this.checked; // Hoàn tác nếu lỗi
                    }
                })
                .catch(err => {
                    console.error(err);
                    alert("Lỗi kết nối!");
                    this.checked = !this.checked;
                });
            });
        });
    </script>
}