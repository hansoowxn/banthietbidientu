@model IEnumerable<banthietbidientu.Models.LichSuHoatDong>
@{
    ViewData["Title"] = "Nhật ký hoạt động hệ thống";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold text-primary"><i class="bi bi-journal-medical me-2"></i>Nhật Ký Hoạt Động</h4>

        <form method="get" class="d-flex gap-2">
            <select name="storeId" class="form-select form-select-sm" onchange="this.form.submit()">
                <option value="">-- Tất cả chi nhánh --</option>
                <option value="1" selected="@(ViewBag.SelectedStore == 1)">Hà Nội</option>
                <option value="2" selected="@(ViewBag.SelectedStore == 2)">Đà Nẵng</option>
                <option value="3" selected="@(ViewBag.SelectedStore == 3)">TP.HCM</option>
            </select>
        </form>
    </div>

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Thời gian</th>
                            <th>Người thực hiện</th>
                            <th>Hành động</th>
                            <th>Chi tiết nội dung</th>
                            <th>Chi nhánh</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 text-muted small">
                                        @item.ThoiGian.ToString("dd/MM/yyyy HH:mm")
                                    </td>
                                    <td>
                                        <div class="fw-bold">@item.TenNguoiDung</div>
                                    </td>
                                    <td>
                                        @{
                                            string badgeClass = "bg-secondary";
                                            if (item.HanhDong.Contains("Thêm")) badgeClass = "bg-success";
                                            else if (item.HanhDong.Contains("Sửa") || item.HanhDong.Contains("Cập nhật")) badgeClass = "bg-warning text-dark";
                                            else if (item.HanhDong.Contains("Xóa")) badgeClass = "bg-danger";
                                            else if (item.HanhDong.Contains("Duyệt")) badgeClass = "bg-info text-dark";
                                        }
                                        <span class="badge @badgeClass rounded-pill">@item.HanhDong</span>
                                    </td>
                                    <td class="text-wrap" style="max-width: 400px;">
                                        @item.NoiDung
                                    </td>
                                    <td>
                                        @if (item.StoreId == 1)
                                        {
                                            <span class="badge bg-light text-secondary border">Hà Nội</span>
                                        }
                                        else if (item.StoreId == 2)
                                        {
                                            <span class="badge bg-light text-secondary border">Đà Nẵng</span>
                                        }
                                        else if (item.StoreId == 3)
                                        {
                                            <span class="badge bg-light text-secondary border">TP.HCM</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">Hệ thống</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    Chưa có ghi nhận hoạt động nào.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white border-0 py-3">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mb-0">
                    <li class="page-item"><a class="page-link" href="?page=1">Trước</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="?page=2">Sau</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>