@model IEnumerable<banthietbidientu.Models.SanPham>

@{
    ViewData["Title"] = "Quản lý Kho hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Style cho ô nhập giá nhanh */
    .quick-edit-input {
        width: 120px;
        border: 1px solid #dee2e6;
        border-radius: 4px;
        padding: 4px 8px;
        font-weight: 600;
        color: #198754; /* Màu xanh lá cho tiền */
        transition: all 0.2s;
    }

        .quick-edit-input:focus {
            border-color: #198754;
            box-shadow: 0 0 0 0.2rem rgba(25, 135, 84, 0.25);
            outline: none;
        }

    /* Hiệu ứng khi lưu thành công */
    .save-success {
        background-color: #d1e7dd !important;
        border-color: #badbcc !important;
    }
</style>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="bi bi-box-seam-fill me-2"></i>Quản lý Kho hàng</h2>
        <a asp-action="ThemSanPham" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> Thêm sản phẩm mới
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="ps-4">Sản phẩm</th>
                            <th>Danh mục</th>
                            <th>Tồn kho</th>

                            <th>Giá Bán</th>

                            <th class="bg-warning-subtle text-dark border-start border-end border-warning">
                                <i class="bi bi-pencil-square me-1"></i> Giá Vốn (Sửa nhanh)
                            </th>

                            <th class="text-end pe-4">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <img src="@item.ImageUrl" class="rounded border me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                        <div>
                                            <div class="fw-bold text-dark">@item.Name</div>
                                            <small class="text-muted">ID: #@item.Id</small>
                                        </div>
                                    </div>
                                </td>
                                <td><span class="badge bg-light text-dark border">@item.Category</span></td>
                                <td>
                                    @if (item.SoLuong > 10)
                                    {
                                        <span class="badge bg-success-subtle text-success">@item.SoLuong chiếc</span>
                                    }
                                    else if (item.SoLuong > 0)
                                    {
                                        <span class="badge bg-warning-subtle text-warning">Còn ít: @item.SoLuong</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger-subtle text-danger">Hết hàng</span>
                                    }
                                </td>

                                <td class="fw-bold text-primary">@item.Price.ToString("N0")</td>

                                <td class="bg-warning-subtle border-start border-end border-warning text-center">
                                    <input type="text"
                                           class="quick-edit-input text-end"
                                           value="@item.GiaNhap.ToString("N0")"
                                           onblur="capNhatGiaNhap(this, @item.Id)"
                                           onfocus="this.select()"
                                           onkeyup="formatCurrencyInput(this)" />
                                </td>

                                <td class="text-end pe-4">
                                    <a asp-action="SuaSanPham" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1" title="Sửa chi tiết">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteModal-@item.Id" title="Xóa">
                                        <i class="bi bi-trash"></i>
                                    </button>

                                    <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title fw-bold text-danger">Xác nhận xóa</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body text-start">
                                                    Bạn có chắc muốn xóa sản phẩm <strong>@item.Name</strong> không?
                                                    <p class="text-muted small mt-2">Lưu ý: Hành động này không thể hoàn tác.</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                    <form asp-action="XoaSanPham" asp-route-id="@item.Id" method="post">
                                                        <button type="submit" class="btn btn-danger">Xóa luôn</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="liveToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                <i class="bi bi-check-circle-fill me-2"></i> Đã cập nhật giá vốn thành công!
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 1. Hàm định dạng tiền tệ khi gõ (VD: 100000 -> 100,000)
        function formatCurrencyInput(input) {
            // Xóa hết ký tự không phải số
            let value = input.value.replace(/\D/g, "");

            // Định dạng lại có dấu phẩy
            if(value) {
                value = parseInt(value).toLocaleString('en-US');
            }
            input.value = value;
        }

        // 2. Hàm gọi API lưu giá nhập (AJAX)
        function capNhatGiaNhap(input, id) {
            // Lấy giá trị thực (bỏ dấu phẩy)
            let rawValue = input.value.replace(/,/g, "");
            let giaNhap = parseFloat(rawValue);

            if (isNaN(giaNhap)) giaNhap = 0;

            // Gọi API
            fetch('/Admin/CapNhatGiaNhapNhanh', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `id=${id}&giaNhap=${giaNhap}`
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    // Hiệu ứng thành công (Xanh lá)
                    input.classList.add('save-success');
                    setTimeout(() => input.classList.remove('save-success'), 1000);

                    // Hiện Toast thông báo
                    const toastLiveExample = document.getElementById('liveToast');
                    const toast = new bootstrap.Toast(toastLiveExample);
                    toast.show();
                } else {
                    alert('Lỗi: ' + data.message);
                    input.classList.add('bg-danger', 'text-white'); // Báo đỏ nếu lỗi
                }
            })
            .catch(err => {
                console.error(err);
                alert('Mất kết nối tới máy chủ!');
            });
        }
    </script>
}