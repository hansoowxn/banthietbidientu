@model IEnumerable<banthietbidientu.Models.TaiKhoan>
@inject banthietbidientu.Services.MemberService MemberService

@{
    ViewData["Title"] = "Quản lý tài khoản";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Custom Scrollbar cho bảng */
    .table-responsive::-webkit-scrollbar {
        height: 8px;
    }

    .table-responsive::-webkit-scrollbar-thumb {
        background-color: #cbd5e0;
        border-radius: 4px;
    }

    /* Style cho Avatar */
    .avatar-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 900;
        font-size: 1.2rem;
        color: white;
        text-transform: uppercase;
        box-shadow: 0 3px 6px rgba(0,0,0,0.1);
    }

    /* Hiệu ứng dòng bảng */
    .user-row {
        transition: all 0.2s ease-in-out;
    }

        .user-row:hover {
            background-color: #f8faff !important;
            transform: scale(1.005);
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
            z-index: 1;
            position: relative;
        }

    /* Badge Hạng Thành Viên (Dựa theo site.css cũ nhưng tinh chỉnh nhỏ) */
    .rank-badge {
        font-size: 0.75rem;
        padding: 5px 10px;
        border-radius: 4px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        display: inline-block;
        min-width: 100px;
        text-align: center;
        border: 1px solid rgba(0,0,0,0.1);
    }

    /* Ghi đè lại màu nếu cần thiết để hiển thị tốt trên nền trắng */
    .tier-admin {
        background: linear-gradient(135deg, #8B0000, #1a1a1a);
        color: white;
        border: 1px solid #ff3333;
    }

    .tier-diamond {
        background: linear-gradient(135deg, #1a1a2e, #16213e);
        color: white;
        border: 1px solid #e94560;
    }

    .tier-platinum {
        background: linear-gradient(135deg, #e0f7fa, #80deea);
        color: #006064;
    }

    .tier-gold {
        background: linear-gradient(to right, #fff7ad, #ffc107);
        color: #5c4006;
    }

    .tier-silver {
        background: linear-gradient(135deg, #e0e0e0, #bdc3c7);
        color: #2c3e50;
    }

    .tier-member {
        background: #f1f3f5;
        color: #6c757d;
        border: 1px solid #dee2e6;
    }

    .btn-action {
        width: 32px;
        height: 32px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        transition: 0.2s;
    }

        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 3px 8px rgba(0,0,0,0.1);
        }
</style>

<div class="container-fluid py-4">

    <!-- Header & Search -->
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h4 class="fw-bold text-dark mb-1">
                <i class="bi bi-people-fill text-primary me-2"></i>Quản Lý Tài Khoản
            </h4>
            <p class="text-muted small mb-0">
                Hiện có <strong>@Model.Count()</strong> thành viên trong hệ thống
            </p>
        </div>

        <div class="d-flex gap-3">
            <div class="input-group shadow-sm" style="min-width: 300px;">
                <span class="input-group-text bg-white border-end-0 ps-3"><i class="bi bi-search text-muted"></i></span>
                <input type="text" id="searchUser" class="form-control border-start-0 ps-2" placeholder="Tìm tên, email, sđt...">
            </div>
            <a asp-action="ThemTaiKhoan" class="btn btn-primary fw-bold shadow-sm px-4 d-flex align-items-center">
                <i class="bi bi-person-plus-fill me-2"></i> Thêm Mới
            </a>
        </div>
    </div>

    <!-- Table Card -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table align-middle mb-0" id="userTable">
                <thead class="bg-light text-secondary small text-uppercase fw-bold">
                    <tr>
                        <th class="ps-4 py-3">Thành viên</th>
                        <th>Vai trò & Hạng</th>
                        <th>Liên hệ</th>
                        <th>Thông tin khác</th>
                        <th class="text-end pe-4">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            // 1. Lấy thông tin Hạng từ Service
                            var tier = MemberService.GetUserTier(item.Username);

                            // 2. Tạo Avatar màu sắc ngẫu nhiên
                            string firstLetter = !string.IsNullOrEmpty(item.FullName) ? item.FullName.Substring(0, 1).ToUpper() : "U";
                            string[] bgColors = { "#4e73df", "#1cc88a", "#36b9cc", "#f6c23e", "#e74a3b", "#858796", "#6f42c1" };
                            string avatarBg = bgColors[item.Id % bgColors.Length];

                            // Nếu là Admin thì Avatar màu đỏ đặc biệt
                            if (item.Role == "Admin") { avatarBg = "linear-gradient(45deg, #e74a3b, #c0392b)"; }

                            <tr class="user-row border-bottom">
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-3" style="background: @avatarBg;">
                                            @firstLetter
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark fs-6">@item.FullName</div>
                                            <div class="small text-muted font-monospace">@item.Username</div>
                                        </div>
                                    </div>
                                </td>

                                <td>
                                    <!-- Vai trò -->
                                    <div class="mb-2">
                                        @if (item.Role == "Admin")
                                        {
                                            <span class="badge bg-danger bg-opacity-10 text-danger border border-danger rounded-pill px-3">
                                                <i class="bi bi-shield-lock-fill me-1"></i> Quản trị viên
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success border border-success rounded-pill px-3">
                                                <i class="bi bi-person-fill me-1"></i> Khách hàng
                                            </span>
                                        }
                                    </div>
                                    <!-- Hạng thành viên (Hiển thị Class màu sắc từ Service) -->
                                    <div class="rank-badge @tier.CssClass shadow-sm">
                                        <i class="bi @tier.Icon me-1"></i> @tier.Name
                                    </div>
                                    <!-- Hiển thị tiền chi tiêu nhỏ bên dưới -->
                                    @if (item.Role != "Admin")
                                    {
                                        <div class="text-muted fst-italic mt-1" style="font-size: 10px;">
                                            Chi tiêu: @tier.TotalSpent.ToString("#,##0") đ
                                        </div>
                                    }
                                </td>

                                <td>
                                    <div class="d-flex flex-column gap-1">
                                        <div class="text-dark small"><i class="bi bi-envelope-at me-2 text-primary"></i> @item.Email</div>
                                        <div class="text-dark small">
                                            <i class="bi bi-telephone me-2 text-success"></i>
                                            @(string.IsNullOrEmpty(item.PhoneNumber) ? "---" : item.PhoneNumber)
                                        </div>
                                    </div>
                                </td>

                                <td class="small text-muted">
                                    <div class="mb-1 text-truncate" style="max-width: 200px;" title="@item.Address">
                                        <i class="bi bi-geo-alt me-1 text-danger"></i> @(item.Address ?? "Chưa cập nhật")
                                    </div>
                                    <div>
                                        <i class="bi bi-cake2 me-1 text-warning"></i>
                                        @(item.DateOfBirth.Year > 1 ? item.DateOfBirth.ToString("dd/MM/yyyy") : "---")
                                    </div>
                                </td>

                                <td class="text-end pe-4">
                                    <a asp-action="SuaTaiKhoan" asp-route-id="@item.Id" class="btn-action btn-light text-primary me-1" title="Chỉnh sửa">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="LichSuMuaHang" asp-route-userId="@item.Id" class="btn-action btn-light text-info me-1" title="Lịch sử mua hàng">
                                        <i class="bi bi-clock-history"></i>
                                    </a>

                                    @if (item.Username != User.Identity.Name) // Không cho tự xóa chính mình
                                    {
                                        <form asp-action="XoaTaiKhoan" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa tài khoản @item.Username không? Dữ liệu đơn hàng liên quan cũng sẽ bị ảnh hưởng.');">
                                            <button type="submit" class="btn-action btn-light text-danger border-0" title="Xóa tài khoản">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <img src="https://cdn-icons-png.flaticon.com/512/7486/7486744.png" width="80" class="mb-3 opacity-50" />
                                <p class="mb-0">Không tìm thấy tài khoản nào phù hợp.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    // Search Script đơn giản (Client-side)
    document.getElementById('searchUser').addEventListener('keyup', function() {
        let searchText = this.value.toLowerCase();
        let rows = document.querySelectorAll('#userTable tbody tr');

        rows.forEach(row => {
            let text = row.innerText.toLowerCase();
            if (text.includes(searchText)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });
</script>