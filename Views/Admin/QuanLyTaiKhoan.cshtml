@model IEnumerable<banthietbidientu.Models.TaiKhoan>
@inject banthietbidientu.Services.MemberService MemberService

@{
    ViewData["Title"] = "Quản lý tài khoản";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Custom Scrollbar cho bảng */
    .table-responsive::-webkit-scrollbar {
        height: 8px;
    }

    .table-responsive::-webkit-scrollbar-thumb {
        background-color: #cbd5e0;
        border-radius: 4px;
    }

    /* Style cho Avatar */
    .avatar-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 900;
        font-size: 1.2rem;
        color: white;
        text-transform: uppercase;
        box-shadow: 0 3px 6px rgba(0,0,0,0.1);
    }

    /* Hiệu ứng dòng bảng */
    .user-row {
        transition: all 0.2s ease-in-out;
    }

        .user-row:hover {
            background-color: #f8f9fa !important;
            transform: scale(1.002);
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
            z-index: 1;
            position: relative;
        }

    /* Badge Hạng Thành Viên */
    .rank-badge {
        font-size: 0.7rem;
        padding: 4px 8px;
        border-radius: 4px;
        font-weight: 700;
        text-transform: uppercase;
        display: inline-block;
        min-width: 90px;
        text-align: center;
        border: 1px solid rgba(0,0,0,0.1);
        margin-top: 4px;
    }

    /* Style riêng cho từng Role */
    .role-boss {
        background: linear-gradient(135deg, #8B0000, #330000);
        color: white;
        border: 1px solid #ff3333;
    }

    .role-admin {
        background: linear-gradient(135deg, #0d6efd, #004085);
        color: white;
        border: 1px solid #0d6efd;
    }

    .role-user {
        background: #e9ecef;
        color: #495057;
        border: 1px solid #ced4da;
    }

    .btn-action {
        width: 32px;
        height: 32px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        transition: 0.2s;
    }

        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 3px 8px rgba(0,0,0,0.1);
        }
</style>

<div class="container-fluid py-4">

    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h4 class="fw-bold text-dark mb-1"><i class="bi bi-people-fill text-primary me-2"></i>Quản Lý Tài Khoản</h4>
            <p class="text-muted small mb-0">Hiện có <strong>@Model.Count()</strong> thành viên trong hệ thống</p>
        </div>

        <div class="d-flex gap-3">
            <div class="input-group shadow-sm" style="min-width: 300px;">
                <span class="input-group-text bg-white border-end-0 ps-3"><i class="bi bi-search text-muted"></i></span>
                <input type="text" id="searchUser" class="form-control border-start-0 ps-2" placeholder="Tìm tên, email, sđt...">
            </div>
            <a asp-action="ThemTaiKhoan" class="btn btn-primary fw-bold shadow-sm px-4 d-flex align-items-center">
                <i class="bi bi-person-plus-fill me-2"></i> Thêm Mới
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table align-middle mb-0" id="userTable">
                <thead class="bg-light text-secondary small text-uppercase fw-bold">
                    <tr>
                        <th class="ps-4 py-3">Thành viên</th>
                        <th>Vai trò & Hạng</th>
                        <th>Chi nhánh (Store)</th>
                        <th>Liên hệ</th>
                        <th>Thông tin khác</th>
                        <th class="text-end pe-4">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            // 1. Lấy thông tin Hạng
                            var tier = MemberService.GetUserTier(item.Username);

                            // 2. Màu Avatar
                            string firstLetter = !string.IsNullOrEmpty(item.FullName) ? item.FullName.Substring(0, 1).ToUpper() : "U";
                            string avatarBg = "#6c757d";
                            if (item.Role == "Boss") avatarBg = "linear-gradient(45deg, #8B0000, #FF0000)";
                            else if (item.Role == "Admin") avatarBg = "linear-gradient(45deg, #0d6efd, #004085)";
                            else avatarBg = "#198754"; // User xanh lá

                            <tr class="user-row border-bottom">
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-3" style="background: @avatarBg;">@firstLetter</div>
                                        <div>
                                            <div class="fw-bold text-dark fs-6">@item.FullName</div>
                                            <div class="small text-muted font-monospace">@item.Username</div>
                                        </div>
                                    </div>
                                </td>

                                <td>
                                    <div class="mb-1">
                                        @if (item.Role == "Boss")
                                        {
                                            <span class="badge bg-danger text-uppercase border border-danger">
                                                <i class="bi bi-crown-fill me-1"></i> BOSS (CHỦ TỊCH)
                                            </span>
                                        }
                                        else if (item.Role == "Admin")
                                        {
                                            <span class="badge bg-primary text-uppercase border border-primary">
                                                <i class="bi bi-shield-check me-1"></i> QUẢN LÝ
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success border border-success">
                                                <i class="bi bi-person-fill me-1"></i> KHÁCH HÀNG
                                            </span>
                                        }
                                    </div>
                                    <div class="rank-badge @tier.CssClass">@tier.Name</div>
                                </td>

                                <td>
                                    @if (item.Role == "Boss")
                                    {
                                        <span class="text-danger fw-bold small"><i class="bi bi-globe me-1"></i> Toàn hệ thống</span>
                                    }
                                    else if (item.StoreId == 1)
                                    {
                                        <span class="badge bg-info text-dark">Hà Nội</span>
                                    }
                                    else if (item.StoreId == 2)
                                    {
                                        <span class="badge bg-warning text-dark">Đà Nẵng</span>
                                    }
                                    else if (item.StoreId == 3)
                                    {
                                        <span class="badge bg-success">TP.HCM</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">---</span>
                                    }
                                </td>

                                <td>
                                    <div class="d-flex flex-column gap-1">
                                        <div class="text-dark small"><i class="bi bi-envelope-at me-2 text-primary"></i> @item.Email</div>
                                        <div class="text-dark small"><i class="bi bi-telephone me-2 text-success"></i> @(item.PhoneNumber ?? "---")</div>
                                    </div>
                                </td>

                                <td class="small text-muted">
                                    <div class="mb-1 text-truncate" style="max-width: 150px;" title="@item.Address">
                                        <i class="bi bi-geo-alt me-1 text-danger"></i> @(item.Address ?? "Chưa cập nhật")
                                    </div>
                                    <div>
                                        <i class="bi bi-cake2 me-1 text-warning"></i> @(item.DateOfBirth.HasValue ? item.DateOfBirth.Value.ToString("dd/MM/yyyy") : "---")
                                    </div>
                                </td>

                                <td class="text-end pe-4">
                                    <a asp-action="SuaTaiKhoan" asp-route-id="@item.Id" class="btn-action btn-light text-primary me-1" title="Chỉnh sửa">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>

                                    @if (item.Role != "Boss" && item.Username != User.Identity.Name)
                                    {
                                        <form asp-action="XoaTaiKhoan" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc muốn xóa tài khoản này không?');">
                                            <button type="submit" class="btn-action btn-light text-danger border-0" title="Xóa tài khoản">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <img src="https://cdn-icons-png.flaticon.com/512/7486/7486744.png" width="80" class="mb-3 opacity-50" />
                                <p class="mb-0">Không tìm thấy tài khoản nào phù hợp.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    document.getElementById('searchUser').addEventListener('keyup', function() {
        let searchText = this.value.toLowerCase();
        let rows = document.querySelectorAll('#userTable tbody tr');
        rows.forEach(row => {
            let text = row.innerText.toLowerCase();
            row.style.display = text.includes(searchText) ? '' : 'none';
        });
    });
</script>