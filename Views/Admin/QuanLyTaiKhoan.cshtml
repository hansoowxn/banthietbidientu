@model IEnumerable<banthietbidientu.Models.TaiKhoan>

@{
    ViewData["Title"] = "Quản lý tài khoản";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold text-primary mb-1"><i class="bi bi-people-fill me-2"></i>Quản Lý Tài Khoản</h4>
            <p class="text-muted small mb-0">Tổng số: <strong>@Model.Count()</strong> tài khoản</p>
        </div>
        <a asp-action="ThemTaiKhoan" class="btn btn-primary shadow-sm">
            <i class="bi bi-person-plus-fill me-2"></i>Thêm tài khoản
        </a>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-3">
            <div class="input-group">
                <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                <input type="text" id="searchUser" class="form-control border-start-0 ps-0" placeholder="Tìm kiếm theo Tên, Email hoặc Tên đăng nhập...">
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" id="userTable">
                <thead class="bg-light text-muted small text-uppercase">
                    <tr>
                        <th class="ps-4 py-3">Người dùng</th>
                        <th>Tên đăng nhập</th>
                        <th>Vai trò</th>
                        <th>Thông tin khác</th>
                        <th class="text-end pe-4">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            // Lấy chữ cái đầu của tên để làm Avatar
                            string firstLetter = !string.IsNullOrEmpty(item.FullName) ? item.FullName.Substring(0, 1).ToUpper() : "U";
                            // Random màu nền cho Avatar (dựa trên độ dài tên)
                            string[] colors = { "bg-primary", "bg-success", "bg-warning", "bg-danger", "bg-info", "bg-dark" };
                            string avatarColor = colors[item.Id % colors.Length];

                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle text-white d-flex align-items-center justify-content-center me-3 @avatarColor"
                                             style="width: 45px; height: 45px; font-weight: bold; font-size: 18px;">
                                            @firstLetter
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">@item.FullName</div>
                                            <div class="small text-muted">@item.Email</div>
                                        </div>
                                    </div>
                                </td>

                                <td class="fw-medium text-secondary">@item.Username</td>

                                <td>
                                    @if (item.Role == "Admin")
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger px-3 py-2 rounded-pill">
                                            <i class="bi bi-shield-lock-fill me-1"></i> Quản trị viên
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">
                                            <i class="bi bi-person-fill me-1"></i> Khách hàng
                                        </span>
                                    }
                                </td>

                                <td class="small text-muted">
                                    <div class="mb-1"><i class="bi bi-geo-alt me-1"></i> @(item.Address ?? "Chưa cập nhật")</div>

                                    <div>
                                        <i class="bi bi-calendar-event me-1"></i>
                                        @(item.DateOfBirth.Year > 1 ? item.DateOfBirth.ToString("dd/MM/yyyy") : "Chưa cập nhật")
                                    </div>
                                </td>

                                <td class="text-end pe-4">
                                    <div class="dropdown">
                                        <button class="btn btn-light btn-sm rounded-circle border-0" type="button" data-bs-toggle="dropdown">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                                            <li>
                                                <a class="dropdown-item" asp-action="SuaTaiKhoan" asp-route-id="@item.Id">
                                                    <i class="bi bi-pencil-square text-warning me-2"></i> Sửa thông tin
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-action="LichSuMuaHang" asp-route-userId="@item.Id">
                                                    <i class="bi bi-clock-history text-info me-2"></i> Xem lịch sử mua
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <form asp-action="XoaTaiKhoan" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa tài khoản @item.Username không?');">
                                                    <button type="submit" class="dropdown-item text-danger">
                                                        <i class="bi bi-trash me-2"></i> Xóa tài khoản
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="bi bi-person-x fs-1 d-block mb-2"></i>
                                Không tìm thấy tài khoản nào.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    document.getElementById('searchUser').addEventListener('keyup', function() {
        let searchText = this.value.toLowerCase();
        let rows = document.querySelectorAll('#userTable tbody tr');

        rows.forEach(row => {
            // Lấy nội dung text của cả dòng
            let text = row.innerText.toLowerCase();
            if (text.includes(searchText)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });
</script>