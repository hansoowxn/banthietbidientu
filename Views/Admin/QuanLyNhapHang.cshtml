@model IEnumerable<banthietbidientu.Models.PhieuNhap>

@{
    ViewData["Title"] = "Lịch sử nhập hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold text-primary mb-1"><i class="bi bi-journal-album me-2"></i>Lịch Sử Nhập Kho</h4>
            <small class="text-muted">Theo dõi phân bổ hàng hóa và chi phí</small>
        </div>
        <div class="d-flex gap-2">
            <a href="@Url.Action("XuatExcelLichSuNhap", "Warehouse")" class="btn btn-outline-success fw-bold rounded-pill px-3 shadow-sm">
                <i class="bi bi-file-earmark-excel me-1"></i> Xuất Excel
            </a>

            <a href="@Url.Action("NhapHang", "Warehouse")" class="btn btn-primary fw-bold rounded-pill px-4 shadow-sm">
                <i class="bi bi-plus-lg me-1"></i> Nhập hàng mới
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-uppercase small fw-bold text-secondary">
                        <tr>
                            <th class="ps-4 py-3">Mã phiếu</th>
                            <th>Ngày nhập</th>
                            <th>Chi tiết phân bổ (Tự động)</th>
                            <th>Sản phẩm</th>
                            <th class="text-end">Tổng tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold text-primary">#@item.Id</div>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold text-dark">@item.NgayNhap.ToString("dd/MM/yyyy")</span>
                                            <span class="text-muted small">@item.NgayNhap.ToString("HH:mm")</span>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.GhiChu))
                                        {
                                            <span class="badge bg-light text-dark border">
                                                <i class="bi bi-diagram-3 me-1"></i> @item.GhiChu
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.ChiTiets != null && item.ChiTiets.Any())
                                        {
                                            foreach (var ct in item.ChiTiets)
                                            {
                                                <div class="d-flex align-items-center mb-1">
                                                    <img src="@(ct.SanPham?.ImageUrl ?? "/image/logo.png")"
                                                         class="rounded border me-2" style="width: 35px; height: 35px; object-fit: cover;">
                                                    <div>
                                                        <div class="fw-bold text-dark small">@ct.SanPham?.Name</div>
                                                        <div class="text-muted" style="font-size: 11px;">
                                                            Tổng SL: <span class="text-success fw-bold">@ct.SoLuongNhap</span> x @ct.GiaNhap.ToString("N0")đ
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        }
                                    </td>
                                    <td class="text-end fw-bold text-success fs-6 pe-4">
                                        @item.TongTien.ToString("N0") đ
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <p class="text-muted">Chưa có dữ liệu nhập hàng</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>