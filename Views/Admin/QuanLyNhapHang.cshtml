@model IEnumerable<banthietbidientu.Models.PhieuNhap>

@{
    ViewData["Title"] = "Lịch sử nhập hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold text-primary"><i class="bi bi-clock-history me-2"></i>Lịch Sử Nhập Kho</h4>
        <a asp-action="NhapHang" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-lg me-2"></i>Tạo phiếu nhập mới
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-uppercase small text-muted fw-bold">
                        <tr>
                            <th class="ps-4">Mã Phiếu</th>
                            <th>Ngày Nhập</th>
                            <th>Chi Tiết Sản Phẩm (SL x Giá Vốn)</th>
                            <th>Ghi Chú</th>
                            <th class="text-end pe-4">Tổng Tiền Nhập</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-primary">#@item.Id</td>

                                    <td>
                                        <div class="fw-bold">@item.NgayNhap.ToString("dd/MM/yyyy")</div>
                                        <div class="small text-muted">@item.NgayNhap.ToString("HH:mm")</div>
                                    </td>

                                    <td>
                                        @if (item.ChiTiets != null)
                                        {
                                            <ul class="list-unstyled mb-0 small">
                                                @foreach (var ct in item.ChiTiets)
                                                {
                                                    <li class="mb-1">
                                                        <span class="fw-bold text-dark">@ct.SanPham?.Name</span>
                                                        <span class="text-muted">
                                                            (SL: <strong class="text-success">@ct.SoLuongNhap</strong>
                                                            x @ct.GiaNhap.ToString("#,##0")đ)
                                                        </span>
                                                    </li>
                                                }
                                            </ul>
                                        }
                                    </td>

                                    <td class="text-muted small fst-italic">
                                        @(string.IsNullOrEmpty(item.GhiChu) ? "---" : item.GhiChu)
                                    </td>

                                    <td class="text-end pe-4">
                                        <span class="fw-bold text-danger fs-6">
                                            @item.TongTien.ToString("#,##0") đ
                                        </span>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="bi bi-clipboard-x fs-1 d-block mb-2"></i>
                                    Chưa có lịch sử nhập hàng nào.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>