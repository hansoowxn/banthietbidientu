@model IEnumerable<banthietbidientu.Models.DonHangViewModel>

@{
    ViewData["Title"] = "Tổng quan hệ thống";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Dashboard Cards */
    .dash-card {
        border: none;
        border-radius: 16px;
        color: white;
        position: relative;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        transition: transform 0.2s;
    }

        .dash-card:hover {
            transform: translateY(-5px);
        }

    .dash-icon {
        position: absolute;
        right: 15px;
        bottom: 15px;
        font-size: 4rem;
        opacity: 0.15;
        transform: rotate(-10deg);
    }

    /* Gradients */
    .bg-g-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .bg-g-success {
        background: linear-gradient(135deg, #2af598 0%, #009efd 100%);
    }

    .bg-g-warning {
        background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);
    }

    .bg-g-danger {
        background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 99%, #fecfef 100%);
        color: #555;
    }

    .bg-g-info {
        background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);
    }

    /* Table & Chart Containers */
    .chart-box {
        background: white;
        border-radius: 16px;
        padding: 20px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.03);
        height: 100%;
    }

    .chart-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
    }

    .chart-title {
        font-weight: 700;
        color: #444;
        font-size: 1.1rem;
        margin: 0;
    }
</style>

<div class="container-fluid p-4">

    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card dash-card bg-g-success h-100 p-3">
                <div class="text-uppercase small fw-bold opacity-75">Doanh thu hôm nay</div>
                <div class="h2 fw-bold mb-0 mt-1">
                    @(((decimal)ViewBag.DoanhThuHomNay).ToString("N0")) đ
                </div>
                <div class="small mt-2">
                    <i class="bi bi-cart-check"></i> @ViewBag.DonHangHomNay đơn hàng mới
                </div>
                <i class="bi bi-currency-dollar dash-icon"></i>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card dash-card bg-g-warning h-100 p-3 text-white">
                <div class="text-uppercase small fw-bold opacity-75">Đơn chờ xử lý</div>
                <div class="h2 fw-bold mb-0 mt-1">@ViewBag.DonChoXuLy</div>
                <div class="small mt-2">Cần duyệt ngay</div>
                <i class="bi bi-hourglass-split dash-icon"></i>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card dash-card bg-g-primary h-100 p-3">
                <div class="text-uppercase small fw-bold opacity-75">Tổng doanh thu</div>
                <div class="h2 fw-bold mb-0 mt-1">
                    @(((decimal)ViewBag.TongDoanhThu).ToString("N0")) đ
                </div>
                <div class="small mt-2">Toàn thời gian</div>
                <i class="bi bi-graph-up-arrow dash-icon"></i>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card dash-card bg-g-info h-100 p-3">
                <div class="text-uppercase small fw-bold opacity-75">Khách hàng</div>
                <div class="h2 fw-bold mb-0 mt-1">@ViewBag.TongKhachHang</div>
                <div class="small mt-2">Thành viên đăng ký</div>
                <i class="bi bi-people-fill dash-icon"></i>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-lg-8">
            <div class="chart-box">
                <div class="chart-header">
                    <h6 class="chart-title">
                        <i class="bi bi-bar-chart-line-fill text-primary me-2"></i>Hiệu quả kinh doanh (7 ngày qua)
                    </h6>
                </div>
                <canvas id="weekChart" height="300"></canvas>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="chart-box">
                <div class="chart-header">
                    <h6 class="chart-title">
                        <i class="bi bi-pie-chart-fill text-info me-2"></i>Tỷ lệ đơn hàng
                    </h6>
                </div>
                <div style="position: relative; height: 250px; display: flex; justify-content: center;">
                    <canvas id="statusChart"></canvas>
                </div>
                <div class="mt-3 text-center small text-muted">
                    Phân bố trạng thái đơn hàng hiện tại
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-header bg-white py-3 border-bottom-0 d-flex justify-content-between align-items-center">
            <h6 class="m-0 fw-bold text-dark">
                <i class="bi bi-clock-history text-secondary me-2"></i>Đơn hàng mới nhất
            </h6>
            <a href="@Url.Action("QuanLyDonHang", "Admin")" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                Xem tất cả
            </a>
        </div>
        <div class="table-responsive">
            <table class="table align-middle mb-0 table-hover">
                <thead class="bg-light small text-uppercase text-muted">
                    <tr>
                        <th class="ps-4">Mã đơn</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-primary">#@item.MaDon</td>
                                <td>@item.TenKhachHang</td>
                                <td class="text-muted small">
                                    @(item.NgayDat.HasValue ? item.NgayDat.Value.ToString("dd/MM HH:mm") : "")
                                </td>
                                <td class="fw-bold">@item.TongTien.ToString("N0") đ</td>
                                <td>
                                    @if (item.TrangThai == "Hoàn thành")
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success rounded-pill">Hoàn thành</span>
                                    }
                                    else if (item.TrangThai == "Đã hủy")
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill">Đã hủy</span>
                                    }
                                    else if (item.TrangThai == "Đang giao")
                                    {
                                        <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill">Đang giao</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning bg-opacity-10 text-warning rounded-pill">@item.TrangThai</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4 text-muted">Chưa có đơn hàng nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // 1. Biểu đồ Đường (7 Ngày)
        var ctxWeek = document.getElementById("weekChart");
        new Chart(ctxWeek, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.ChartLabels)),
                datasets: [
                    {
                        label: "Doanh thu (VNĐ)",
                        type: "bar",
                        backgroundColor: "#4e73df",
                        borderRadius: 5,
                        data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.ChartRevenue)),
                        yAxisID: 'y',
                        order: 2
                    },
                    {
                        label: "Số đơn hàng",
                        type: "line",
                        borderColor: "#1cc88a",
                        backgroundColor: "#1cc88a",
                        pointRadius: 4,
                        pointHoverRadius: 6,
                        borderWidth: 2,
                        data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.ChartOrders)),
                        yAxisID: 'y1',
                        order: 1
                    }
                ]
            },
            options: {
                maintainAspectRatio: false,
                interaction: {
                    mode: 'index',
                    intersect: false
                },
                scales: {
                    x: {
                        grid: { display: false }
                    },
                    y: {
                        type: 'linear',
                        display: true,
                        position: 'left',
                        ticks: {
                            callback: function(value) { return value.toLocaleString('vi-VN') + 'đ'; }
                        },
                        grid: { borderDash: [2] }
                    },
                    y1: {
                        type: 'linear',
                        display: true,
                        position: 'right',
                        grid: { drawOnChartArea: false },
                        ticks: { stepSize: 1 }
                    }
                },
                plugins: {
                    legend: { position: 'top' }
                }
            }
        });

        // 2. Biểu đồ Tròn (Trạng thái)
        var ctxStatus = document.getElementById("statusChart");
        new Chart(ctxStatus, {
            type: 'doughnut',
            data: {
                labels: ["Hoàn thành", "Đang giao", "Chờ xử lý", "Đã hủy"],
                datasets: [{
                    data: [
        @ViewBag.PieCompleted,
        @ViewBag.PieShipping,
        @ViewBag.PiePending,
        @ViewBag.PieCancelled
                    ],
                    backgroundColor: ["#1cc88a", "#4e73df", "#f6c23e", "#e74a3b"],
                    hoverOffset: 4,
                    borderWidth: 0
                }]
            },
            options: {
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'right' }
                },
                cutout: '70%'
            }
        });
    </script>
}