@model banthietbidientu.Models.PhieuChuyenKho
@{
    ViewData["Title"] = "Tạo lệnh chuyển kho";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var listSanPhams = ViewBag.SanPhams as List<banthietbidientu.Models.SanPham>;
    int? currentStoreId = ViewBag.CurrentStoreId;
    bool isBoss = ViewBag.IsBoss ?? false;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-box-seam-fill me-2"></i>Tạo Yêu Cầu Chuyển Kho</h5>
                </div>
                <div class="card-body p-4">

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <ul class="mb-0 ps-3">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <form asp-action="TaoLenhChuyenKho" method="post">

                        <div class="row mb-4">
                            <div class="col-md-5">
                                <label class="form-label fw-bold">Từ Kho (Nguồn)</label>
                                @if (isBoss)
                                {
                                    <select asp-for="TuKhoId" class="form-select bg-light" id="tuKho">
                                        <option value="1">📍 Hà Nội</option>
                                        <option value="2">📍 Đà Nẵng</option>
                                        <option value="3">📍 TP.HCM</option>
                                    </select>
                                    <div class="form-text text-muted small">Nơi xuất hàng đi</div>
                                }
                                else
                                {
                                    <input type="text" class="form-control bg-light" value="Chờ Boss chỉ định" readonly />
                                    <input type="hidden" asp-for="TuKhoId" value="0" />
                                }
                            </div>

                            <div class="col-md-2 d-flex align-items-center justify-content-center">
                                <i class="bi bi-arrow-right-circle-fill fs-2 text-secondary"></i>
                            </div>

                            <div class="col-md-5">
                                <label class="form-label fw-bold">Đến Kho (Đích)</label>
                                @if (isBoss)
                                {
                                    <select asp-for="DenKhoId" class="form-select" id="denKho">
                                        <option value="1">📍 Hà Nội</option>
                                        <option value="2">📍 Đà Nẵng</option>
                                        <option value="3">📍 TP.HCM</option>
                                    </select>
                                }
                                else
                                {
                                    <select asp-for="DenKhoId" class="form-select bg-light" style="pointer-events: none;">
                                        <option value="1" selected="@(currentStoreId == 1)">📍 Hà Nội</option>
                                        <option value="2" selected="@(currentStoreId == 2)">📍 Đà Nẵng</option>
                                        <option value="3" selected="@(currentStoreId == 3)">📍 TP.HCM</option>
                                    </select>
                                }
                                <div class="form-text text-muted small">Nơi nhận hàng về</div>
                            </div>
                        </div>

                        <hr class="border-secondary opacity-25 mb-4">

                        <div class="mb-3">
                            <label class="form-label fw-bold">Sản phẩm cần chuyển</label>
                            <select asp-for="SanPhamId" class="form-select" required id="sanPhamSelect">
                                <option value="">-- Chọn sản phẩm --</option>
                                @if (listSanPhams != null)
                                {
                                    foreach (var sp in listSanPhams)
                                    {
                                        string stockInfo = "";
                                        if (!string.IsNullOrEmpty(sp.MoTa) && sp.MoTa.Contains("||LOC:"))
                                        {
                                            try
                                            {
                                                var parts = sp.MoTa.Split(new[] { "||LOC:", "||" }, StringSplitOptions.RemoveEmptyEntries);
                                                string locPart = parts.FirstOrDefault(p => p.Contains("-") && p.Any(char.IsDigit));
                                                if (locPart != null)
                                                {
                                                    var nums = locPart.Split('-');
                                                    stockInfo = $" (HN: {nums[0]} - ĐN: {nums[1]} - HCM: {nums[2]})";
                                                }
                                            }
                                            catch { }
                                        }
                                        <option value="@sp.Id">@sp.Name @stockInfo</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Số lượng yêu cầu</label>
                            <input asp-for="SoLuong" type="number" class="form-control" min="1" value="1" required />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Ghi chú</label>
                            <textarea asp-for="GhiChu" class="form-control" rows="2" placeholder="Lý do chuyển..."></textarea>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="QuanLyChuyenKho" class="btn btn-light border fw-bold">Hủy bỏ</a>
                            <button type="submit" class="btn btn-primary fw-bold px-4">
                                <i class="bi bi-send-check me-1"></i> Gửi Yêu Cầu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>