@model banthietbidientu.Models.BaoCaoViewModel
@{
    ViewData["Title"] = "Báo cáo thống kê";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1 text-dark">Báo Cáo Kinh Doanh</h4>
            <small class="text-muted">Cập nhật lúc: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</small>
        </div>
        <button class="btn btn-primary btn-sm shadow-sm" onclick="window.print()">
            <i class="bi bi-printer me-2"></i> In Báo Cáo
        </button>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(45deg, #4e73df, #224abe);">
                <div class="card-body text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-white-50 small text-uppercase fw-bold mb-1">Tổng Doanh Thu</div>
                            <div class="h3 mb-0 fw-bold">@Model.TongDoanhThu.ToString("#,##0") đ</div>
                        </div>
                        <div class="fs-1 text-white-50"><i class="bi bi-wallet2"></i></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-success small text-uppercase fw-bold mb-1">Sản phẩm đã bán</div>
                            <div class="h3 mb-0 fw-bold text-dark">@Model.TongSanPhamDaBan</div>
                        </div>
                        <div class="fs-1 text-gray-300"><i class="bi bi-box-seam"></i></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-info small text-uppercase fw-bold mb-1">Tổng giao dịch</div>
                            <div class="h3 mb-0 fw-bold text-dark">@Model.TongDonHang</div>
                        </div>
                        <div class="fs-1 text-gray-300"><i class="bi bi-receipt"></i></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-danger">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-danger small text-uppercase fw-bold mb-1">Sắp hết hàng</div>
                            <div class="h3 mb-0 fw-bold text-dark">@Model.SanPhamSapHet <small class="fs-6 text-muted">mã</small></div>
                        </div>
                        <div class="fs-1 text-gray-300"><i class="bi bi-exclamation-triangle"></i></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3 border-0">
                    <h6 class="m-0 fw-bold text-primary"><i class="bi bi-graph-up-arrow me-2"></i>Biểu đồ doanh thu 7 ngày qua</h6>
                </div>
                <div class="card-body">
                    <canvas id="revenueChart" style="height: 300px;"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3 border-0">
                    <h6 class="m-0 fw-bold text-primary"><i class="bi bi-trophy me-2"></i>Top 5 Bán Chạy</h6>
                </div>
                <div class="card-body">
                    <canvas id="topProductChart" style="height: 250px;"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3 border-0 d-flex justify-content-between align-items-center">
            <h6 class="m-0 fw-bold text-primary"><i class="bi bi-people-fill me-2"></i>Khách Hàng Tiềm Năng (VIP)</h6>
            <a href="@Url.Action("QuanLyTaiKhoan", "Admin")" class="btn btn-sm btn-outline-primary rounded-pill">Xem tất cả</a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Khách hàng</th>
                            <th class="text-center">Hạng thành viên</th>
                            <th>Email</th>
                            <th class="text-center">Số lần mua</th>
                            <th class="text-end pe-4">Tổng chi tiêu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.TopKhachHangs != null)
                        {
                            foreach (var khach in Model.TopKhachHangs)
                            {
                                // Logic tính hạng ngay tại View (Vì Model BaoCao chưa có field này)
                                string rankName = "Thành Viên";
                                string badgeClass = "bg-secondary";

                                if (khach.TongChiTieu >= 100000000) { rankName = "💎 KIM CƯƠNG"; badgeClass = "bg-dark text-white border border-danger"; }
                                else if (khach.TongChiTieu >= 50000000) { rankName = "🏆 BẠCH KIM"; badgeClass = "bg-info text-dark"; }
                                else if (khach.TongChiTieu >= 20000000) { rankName = "🥇 VÀNG"; badgeClass = "bg-warning text-dark"; }
                                else if (khach.TongChiTieu >= 10000000) { rankName = "🥈 BẠC"; badgeClass = "bg-secondary text-white"; }

                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold text-dark">@khach.HoTen</div>
                                    </td>

                                    <td class="text-center">
                                        <span class="badge rounded-pill @badgeClass px-3 py-2 shadow-sm">@rankName</span>
                                    </td>

                                    <td class="text-muted small">@khach.Email</td>
                                    <td class="text-center"><span class="badge bg-light text-dark border rounded-pill px-3">@khach.SoLanMua đơn</span></td>
                                    <td class="text-end pe-4 fw-bold text-success">@khach.TongChiTieu.ToString("#,##0") đ</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {

            // 1. Chart Doanh Thu
            const ctxRevenue = document.getElementById('revenueChart').getContext('2d');
            const labelsNgay = @Html.Raw(Json.Serialize(Model.LabelsNgay));
            const dataDoanhThu = @Html.Raw(Json.Serialize(Model.ValuesDoanhThu));

            new Chart(ctxRevenue, {
                type: 'line',
                data: {
                    labels: labelsNgay,
                    datasets: [{
                        label: 'Doanh thu',
                        data: dataDoanhThu,
                        borderColor: '#4e73df',
                        backgroundColor: 'rgba(78, 115, 223, 0.05)',
                        pointBackgroundColor: '#4e73df',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: '#4e73df',
                        fill: true,
                        tension: 0.3
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { borderDash: [2], color: "#f0f0f0" },
                            ticks: { callback: function(value) { return value.toLocaleString() + ' đ'; } }
                        },
                        x: { grid: { display: false } }
                    }
                }
            });

            // 2. Chart Top Sản Phẩm
            const ctxProduct = document.getElementById('topProductChart').getContext('2d');
            const labelsSP = @Html.Raw(Json.Serialize(Model.TopSanPhamTen));
            const dataSP = @Html.Raw(Json.Serialize(Model.TopSanPhamSoLuong));

            new Chart(ctxProduct, {
                type: 'bar',
                data: {
                    labels: labelsSP,
                    datasets: [{
                        label: 'Số lượng bán',
                        data: dataSP,
                        backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b'],
                        borderRadius: 5,
                        barThickness: 20
                    }]
                },
                options: {
                    indexAxis: 'y', // Biểu đồ ngang
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        x: { // Trục ngang là giá trị số lượng
                            grid: { display: false },
                            ticks: {
                                stepSize: 1, // Bắt buộc bước nhảy là 1 (không hiện 0.5)
                                precision: 0 // Không hiển thị số thập phân
                            }
                        },
                        y: {
                            grid: { display: false }
                        }
                    }
                }
            });
        });
    </script>
}