@model banthietbidientu.Models.BaoCaoViewModel

@{
    ViewData["Title"] = "Báo cáo doanh thu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    int currentMonth = ViewBag.SelectedMonth ?? DateTime.Now.Month;
    int currentYear = ViewBag.SelectedYear ?? DateTime.Now.Year;
    bool isBoss = ViewBag.IsBoss ?? false;
}

<style>
    /* Card KPI Gradient */
    .kpi-card {
        border: none;
        border-radius: 15px;
        color: white;
        overflow: hidden;
        position: relative;
        transition: transform 0.3s;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

        .kpi-card:hover {
            transform: translateY(-5px);
        }

    .bg-gradient-primary {
        background: linear-gradient(45deg, #4e73df, #224abe);
    }

    .bg-gradient-success {
        background: linear-gradient(45deg, #1cc88a, #13855c);
    }

    .bg-gradient-info {
        background: linear-gradient(45deg, #36b9cc, #258391);
    }

    .bg-gradient-warning {
        background: linear-gradient(45deg, #f6c23e, #dda20a);
    }

    .kpi-icon {
        position: absolute;
        right: 20px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 3rem;
        opacity: 0.3;
    }

    /* Table Styles */
    .profit-plus {
        color: #1cc88a;
        font-weight: bold;
    }

    .profit-minus {
        color: #e74a3b;
        font-weight: bold;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fc;
    }
</style>

<div class="container-fluid p-4">
    <form method="get" class="bg-white p-3 rounded-3 shadow-sm mb-4 d-flex flex-wrap gap-3 align-items-end">
        @if (isBoss)
        {
            <div class="flex-grow-1">
                <label class="fw-bold small text-muted">Chọn Chi Nhánh</label>
                <select name="storeId" class="form-select">
                    <option value="">-- Toàn hệ thống --</option>
                    <option value="1" selected="@(Model.SelectedStoreId == 1)">Hà Nội</option>
                    <option value="2" selected="@(Model.SelectedStoreId == 2)">Đà Nẵng</option>
                    <option value="3" selected="@(Model.SelectedStoreId == 3)">TP. Hồ Chí Minh</option>
                </select>
            </div>
        }

        <div style="width: 120px;">
            <label class="fw-bold small text-muted">Tháng</label>
            <select name="month" class="form-select">
                @for (int i = 1; i <= 12; i++)
                {
                    <option value="@i" selected="@(i == currentMonth)">Tháng @i</option>
                }
            </select>
        </div>

        <div style="width: 120px;">
            <label class="fw-bold small text-muted">Năm</label>
            <select name="year" class="form-select">
                @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 2; y--)
                {
                    <option value="@y" selected="@(y == currentYear)">@y</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary px-4 fw-bold"><i class="bi bi-filter"></i> Xem Báo Cáo</button>
        <a href="@Url.Action("XuatExcelDonHang")" class="btn btn-success px-3"><i class="bi bi-file-earmark-excel"></i> Xuất Excel</a>
    </form>

    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card kpi-card bg-gradient-primary h-100 py-2">
                <div class="card-body">
                    <div class="text-uppercase small fw-bold mb-1 text-white-50">Doanh Thu (Tháng @currentMonth)</div>
                    <div class="h3 mb-0 fw-bold">@Model.TongDoanhThu.ToString("N0") đ</div>
                    <i class="bi bi-currency-dollar kpi-icon"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card kpi-card bg-gradient-success h-100 py-2">
                <div class="card-body">
                    <div class="text-uppercase small fw-bold mb-1 text-white-50">Lợi Nhuận (Ước tính)</div>
                    <div class="h3 mb-0 fw-bold">@Model.LoiNhuanUocTinh.ToString("N0") đ</div>
                    <i class="bi bi-graph-up-arrow kpi-icon"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card kpi-card bg-gradient-info h-100 py-2">
                <div class="card-body">
                    <div class="text-uppercase small fw-bold mb-1 text-white-50">Tổng Đơn Hàng</div>
                    <div class="h3 mb-0 fw-bold">@Model.TongDonHang đơn</div>
                    <i class="bi bi-receipt kpi-icon"></i>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card kpi-card bg-gradient-warning h-100 py-2">
                <div class="card-body">
                    <div class="text-uppercase small fw-bold mb-1 text-white-50">Sản Phẩm Đã Bán</div>
                    <div class="h3 mb-0 fw-bold">@Model.TongSanPhamDaBan cái</div>
                    <i class="bi bi-box-seam kpi-icon"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4 rounded-4 border-0">
        <div class="card-header py-3 bg-white d-flex justify-content-between align-items-center">
            <h6 class="m-0 fw-bold text-primary">
                <i class="bi bi-bar-chart-line-fill me-2"></i> Biểu đồ Doanh thu 3 năm gần nhất (@Model.StoreName)
            </h6>
        </div>
        <div class="card-body">
            <canvas id="revenueChart" height="80"></canvas>
        </div>
    </div>

    <div class="card shadow-sm rounded-4 border-0">
        <div class="card-header py-3 bg-white">
            <h6 class="m-0 fw-bold text-success">
                <i class="bi bi-table me-2"></i> Hiệu quả kinh doanh theo Sản phẩm (Tháng @currentMonth/@currentYear)
            </h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="ps-4">Sản phẩm</th>
                            <th class="text-center">Số lượng bán</th>
                            <th class="text-end">Doanh thu</th>
                            <th class="text-end">Giá vốn</th>
                            <th class="text-end">Lợi nhuận</th>
                            <th class="text-end pe-4">% Tỷ suất LN</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.BaoCaoLoiNhuan != null && Model.BaoCaoLoiNhuan.Any())
                        {
                            foreach (var item in Model.BaoCaoLoiNhuan)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <img src="@item.HinhAnh" class="rounded border me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                            <span class="fw-bold text-dark">@item.TenSanPham</span>
                                        </div>
                                    </td>
                                    <td class="text-center">@item.SoLuongBan</td>
                                    <td class="text-end fw-bold text-primary">@item.DoanhThu.ToString("N0")</td>
                                    <td class="text-end text-muted">@item.GiaVon.ToString("N0")</td>
                                    <td class="text-end @(item.LoiNhuan >= 0 ? "profit-plus" : "profit-minus")">
                                        @item.LoiNhuan.ToString("N0")
                                    </td>
                                    <td class="text-end pe-4">
                                        <span class="badge @(item.Margin >= 30 ? "bg-success" : item.Margin >= 10 ? "bg-warning text-dark" : "bg-danger")">
                                            @item.Margin.ToString("0.0")%
                                        </span>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    Không có dữ liệu bán hàng trong tháng này.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Dữ liệu từ C#
        var ctx = document.getElementById("revenueChart");
        var myLineChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ["T1", "T2", "T3", "T4", "T5", "T6", "T7", "T8", "T9", "T10", "T11", "T12"],
                datasets: [
                    {
                        label: "Năm nay (@Model.CurrentYear)",
                        lineTension: 0.3,
                        backgroundColor: "rgba(78, 115, 223, 0.05)",
                        borderColor: "rgba(78, 115, 223, 1)",
                        pointRadius: 3,
                        pointBackgroundColor: "rgba(78, 115, 223, 1)",
                        pointBorderColor: "rgba(78, 115, 223, 1)",
                        pointHoverRadius: 3,
                        pointHoverBackgroundColor: "rgba(78, 115, 223, 1)",
                        pointHoverBorderColor: "rgba(78, 115, 223, 1)",
                        pointHitRadius: 10,
                        pointBorderWidth: 2,
                        data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.DataNamHienTai)),
                    },
                    {
                        label: "Năm trước (@(Model.CurrentYear - 1))",
                        lineTension: 0.3,
                        borderColor: "#1cc88a",
                        pointRadius: 3,
                        pointBackgroundColor: "#1cc88a",
                        pointBorderColor: "#1cc88a",
                        borderDash: [5, 5], // Nét đứt
                        data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.DataNamTruoc)),
                    },
                    {
                        label: "Năm kia (@(Model.CurrentYear - 2))",
                        lineTension: 0.3,
                        borderColor: "#e74a3b",
                        pointRadius: 3,
                        pointBackgroundColor: "#e74a3b",
                        pointBorderColor: "#e74a3b",
                        borderDash: [2, 2], // Nét chấm
                        hidden: true, // Mặc định ẩn
                        data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.DataNamKia)),
                    }
                ],
            },
            options: {
                maintainAspectRatio: false,
                layout: { padding: { left: 10, right: 25, top: 25, bottom: 0 } },
                scales: {
                    x: { grid: { display: false, drawBorder: false }, ticks: { maxTicksLimit: 12 } },
                    y: {
                        ticks: {
                            maxTicksLimit: 5, padding: 10,
                            callback: function(value) { return value.toLocaleString('vi-VN') + 'đ'; }
                        },
                        grid: { color: "rgb(234, 236, 244)", zeroLineColor: "rgb(234, 236, 244)", drawBorder: false, borderDash: [2] }
                    },
                },
                plugins: {
                    legend: { display: true, position: 'bottom' },
                    tooltip: {
                        backgroundColor: "rgb(255,255,255)",
                        bodyColor: "#858796",
                        titleMarginBottom: 10,
                        titleColor: '#6e707e',
                        titleFont: { size: 14 },
                        borderColor: '#dddfeb',
                        borderWidth: 1,
                        xPadding: 15,
                        yPadding: 15,
                        displayColors: false,
                        intersect: false,
                        mode: 'index',
                        caretPadding: 10,
                        callbacks: {
                            label: function(context) {
                                var label = context.dataset.label || '';
                                if (label) { label += ': '; }
                                label += context.parsed.y.toLocaleString('vi-VN') + ' đ';
                                return label;
                            }
                        }
                    }
                }
            }
        });
    </script>
}