@model banthietbidientu.Models.BaoCaoViewModel

@{
    ViewData["Title"] = "Báo cáo hiệu quả kinh doanh";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    int currentMonth = ViewBag.SelectedMonth ?? DateTime.Now.Month;
    int currentYear = ViewBag.SelectedYear ?? DateTime.Now.Year;
    bool isBoss = ViewBag.IsBoss ?? false;
}

<style>
    .kpi-card {
        border: none;
        border-radius: 15px;
        color: white;
        position: relative;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s;
    }

        .kpi-card:hover {
            transform: translateY(-5px);
        }

    .kpi-icon {
        position: absolute;
        right: 15px;
        bottom: 15px;
        font-size: 3.5rem;
        opacity: 0.2;
        transform: rotate(-10deg);
    }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .bg-gradient-success {
        background: linear-gradient(135deg, #2af598 0%, #009efd 100%);
    }

    .bg-gradient-warning {
        background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);
    }

    .bg-gradient-info {
        background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%);
    }

    .table-card {
        border-radius: 12px;
        border: none;
        box-shadow: 0 2px 12px rgba(0,0,0,0.05);
    }

        .table-card .card-header {
            background: white;
            border-bottom: 1px solid #f0f0f0;
            padding: 1.5rem;
        }

    .text-profit-plus {
        color: #00b894;
        font-weight: 700;
    }

    .text-profit-minus {
        color: #d63031;
        font-weight: 700;
    }

    .growth-badge {
        background: rgba(255,255,255,0.2);
        padding: 2px 8px;
        border-radius: 4px;
        font-size: 0.75rem;
        display: inline-block;
        margin-top: 5px;
    }
</style>

<div class="container-fluid p-4">

    <div class="d-flex flex-wrap justify-content-between align-items-end mb-4 gap-3">
        <div>
            <h4 class="fw-bold text-dark mb-1">Báo Cáo Hiệu Quả Kinh Doanh</h4>
            <p class="text-muted mb-0">Dữ liệu thống kê cho: <strong class="text-primary">@Model.StoreName</strong></p>
        </div>

        <form method="get" class="d-flex gap-2 bg-white p-2 rounded-3 shadow-sm">
            @if (isBoss)
            {
                <select name="storeId" class="form-select form-select-sm border-0 bg-light fw-bold" style="width: auto; min-width: 170px;">
                    <option value="">-- Toàn hệ thống --</option>
                    <option value="1" selected="@(Model.SelectedStoreId == 1)">Chi nhánh Hà Nội</option>
                    <option value="2" selected="@(Model.SelectedStoreId == 2)">Chi nhánh Đà Nẵng</option>
                    <option value="3" selected="@(Model.SelectedStoreId == 3)">Chi nhánh TP.HCM</option>
                </select>
            }
            <select name="month" class="form-select form-select-sm border-0 bg-light fw-bold">
                @for (int i = 1; i <= 12; i++)
                {
                    <option value="@i" selected="@(i == currentMonth)">Tháng @i</option>
                }
            </select>
            <select name="year" class="form-select form-select-sm border-0 bg-light fw-bold">
                @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 2; y--)
                {
                    <option value="@y" selected="@(y == currentYear)">@y</option>
                }
            </select>
            <button type="submit" class="btn btn-primary btn-sm fw-bold px-3">Lọc</button>
            <a href="@Url.Action("XuatExcelDonHang")" class="btn btn-success btn-sm px-3" title="Xuất Excel"><i class="bi bi-file-earmark-excel"></i></a>
        </form>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card kpi-card bg-gradient-primary h-100 p-3">
                <div class="text-white-50 small text-uppercase fw-bold">Doanh thu thực</div>
                <div class="h2 fw-bold mb-0 mt-1">@Model.TongDoanhThu.ToString("N0") đ</div>
                <div class="growth-badge">
                    @if (Model.GrowthDoanhThu >= 0)
                    {
                        <span><i class="bi bi-arrow-up"></i> @Model.GrowthDoanhThu.ToString("0.0")%</span>
                    }
                    else
                    {
                        <span><i class="bi bi-arrow-down"></i> @Model.GrowthDoanhThu.ToString("0.0")%</span>
                    }
                    <span class="opacity-75"> so với tháng trước</span>
                </div>
                <i class="bi bi-wallet2 kpi-icon"></i>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card kpi-card bg-gradient-success h-100 p-3">
                <div class="text-white-50 small text-uppercase fw-bold">Lợi nhuận ròng</div>
                <div class="h2 fw-bold mb-0 mt-1">@Model.LoiNhuanUocTinh.ToString("N0") đ</div>
                <div class="growth-badge">
                    @if (Model.GrowthLoiNhuan >= 0)
                    {
                        <span><i class="bi bi-arrow-up"></i> @Model.GrowthLoiNhuan.ToString("0.0")%</span>
                    }
                    else
                    {
                        <span><i class="bi bi-arrow-down"></i> @Model.GrowthLoiNhuan.ToString("0.0")%</span>
                    }
                </div>
                <i class="bi bi-graph-up-arrow kpi-icon"></i>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card kpi-card bg-gradient-info h-100 p-3">
                <div class="text-white-50 small text-uppercase fw-bold">Tổng đơn hàng</div>
                <div class="h2 fw-bold mb-0 mt-1">@Model.TongDonHang đơn</div>
                <div class="growth-badge">
                    @if (Model.GrowthDonHang >= 0)
                    {
                        <span><i class="bi bi-arrow-up"></i> @Model.GrowthDonHang.ToString("0.0")%</span>
                    }
                    else
                    {
                        <span><i class="bi bi-arrow-down"></i> @Model.GrowthDonHang.ToString("0.0")%</span>
                    }
                </div>
                <i class="bi bi-receipt kpi-icon"></i>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card kpi-card bg-gradient-warning h-100 p-3">
                <div class="text-white-50 small text-uppercase fw-bold">Sản phẩm đã bán</div>
                <div class="h2 fw-bold mb-0 mt-1">@Model.TongSanPhamDaBan sp</div>
                <div class="growth-badge">
                    @if (Model.GrowthSanPham >= 0)
                    {
                        <span><i class="bi bi-arrow-up"></i> @Model.GrowthSanPham.ToString("0.0")%</span>
                    }
                    else
                    {
                        <span><i class="bi bi-arrow-down"></i> @Model.GrowthSanPham.ToString("0.0")%</span>
                    }
                </div>
                <i class="bi bi-box-seam kpi-icon"></i>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="@(isBoss && Model.SelectedStoreId == null ? "col-lg-8" : "col-lg-8")">
            <div class="card table-card h-100">
                <div class="card-header"><h6 class="fw-bold text-dark m-0">Xu hướng doanh thu (3 năm)</h6></div>
                <div class="card-body"><canvas id="revenueChart" height="100"></canvas></div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card table-card h-100">
                <div class="card-header">
                    <h6 class="fw-bold text-dark m-0">
                        @(isBoss && Model.SelectedStoreId == null ? "Tỷ trọng theo Chi nhánh" : "Tỷ trọng Danh mục")
                    </h6>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <canvas id="pieChart" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card table-card">
                <div class="card-header"><h6 class="fw-bold text-dark m-0">Hiệu quả kinh doanh theo sản phẩm</h6></div>
                <div class="table-responsive">
                    <table class="table align-middle mb-0 table-hover">
                        <thead class="bg-light small text-uppercase text-muted">
                            <tr>
                                <th class="ps-4">Sản phẩm</th>
                                <th class="text-center">SL Bán</th>
                                <th class="text-end">Thực thu</th>
                                <th class="text-end">Vốn</th>
                                <th class="text-end">Lãi ròng</th>
                                <th class="text-end pe-4">% Tỷ suất LN</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.BaoCaoLoiNhuan != null && Model.BaoCaoLoiNhuan.Any())
                            {
                                foreach (var item in Model.BaoCaoLoiNhuan)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <img src="@item.HinhAnh" class="rounded border me-2" style="width: 35px; height: 35px; object-fit: cover;">
                                                <span class="fw-bold text-dark small">@item.TenSanPham</span>
                                            </div>
                                        </td>
                                        <td class="text-center">@item.SoLuongBan</td>
                                        <td class="text-end fw-bold text-primary">@item.DoanhThuThuc.ToString("N0")</td>
                                        <td class="text-end text-muted small">@item.GiaVon.ToString("N0")</td>
                                        <td class="text-end @(item.LoiNhuan >= 0 ? "text-profit-plus" : "text-profit-minus")">@item.LoiNhuan.ToString("N0")</td>
                                        <td class="text-end pe-4"><span class="badge @(item.Margin >= 20 ? "bg-success" : item.Margin >= 5 ? "bg-warning text-dark" : "bg-danger") bg-opacity-75">@item.Margin.ToString("0.0")%</span></td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="6" class="text-center py-4 text-muted">Chưa có dữ liệu bán hàng.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card table-card h-100">
                <div class="card-header bg-gradient-info text-white">
                    <h6 class="fw-bold m-0"><i class="bi bi-gem me-2"></i>Khách Hàng Tiềm Năng (VIP)</h6>
                </div>
                <div class="card-body p-0">
                    @if (Model.KhachHangTiemNangs != null && Model.KhachHangTiemNangs.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var vip in Model.KhachHangTiemNangs)
                            {
                                <div class="list-group-item px-4 py-3">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <span class="fw-bold text-dark">@vip.HoTen</span>
                                        <span class="badge bg-warning text-dark"><i class="bi bi-star-fill"></i> VIP</span>
                                    </div>
                                    <div class="d-flex justify-content-between small text-muted">
                                        <span><i class="bi bi-telephone me-1"></i>@(vip.SoDienThoai ?? "---")</span>
                                        <span>@vip.SoDonHang đơn</span>
                                    </div>
                                    <div class="mt-2 pt-2 border-top d-flex justify-content-between align-items-center">
                                        <span class="small fw-bold text-secondary">Tổng chi tiêu:</span>
                                        <span class="fw-bold text-primary fs-6">@vip.TongChiTieu.ToString("N0") đ</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted"><i class="bi bi-people fs-1 d-block mb-2 opacity-50"></i>Chưa có khách hàng VIP.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // 1. Biểu đồ Đường (3 Năm)
        var ctx = document.getElementById("revenueChart");
        var myLineChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ["T1", "T2", "T3", "T4", "T5", "T6", "T7", "T8", "T9", "T10", "T11", "T12"],
                datasets: [
                    {
                        label: "Năm nay (@Model.CurrentYear)",
                        tension: 0.4,
                        backgroundColor: "rgba(78, 115, 223, 0.05)",
                        borderColor: "#4e73df", // Xanh dương đậm
                        pointBackgroundColor: "#4e73df",
                        borderWidth: 3,
                        data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.DataNamHienTai)),
                    },
                    {
                        label: "Năm trước (@(Model.CurrentYear - 1))",
                        tension: 0.4,
                        borderColor: "#1cc88a", // Xanh lá
                        pointBackgroundColor: "#1cc88a",
                        borderDash: [5, 5],
                        borderWidth: 2,
                        data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.DataNamTruoc)),
                    },
                    {
                        // [ĐÃ BỔ SUNG] Đường thứ 3: Năm kia
                        label: "Năm kia (@(Model.CurrentYear - 2))",
                        tension: 0.4,
                        borderColor: "#e74a3b", // Màu đỏ
                        pointBackgroundColor: "#e74a3b",
                        borderDash: [2, 2], // Nét chấm nhỏ hơn để phân biệt
                        borderWidth: 2,
                        data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.DataNamKia)),
                    }
                ],
            },
            options: {
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'top' },
                    tooltip: {
                        mode: 'index', intersect: false,
                        callbacks: { label: function(c) { return c.dataset.label + ": " + c.parsed.y.toLocaleString('vi-VN') + ' đ'; } }
                    }
                },
                scales: {
                    y: { beginAtZero: true, ticks: { callback: function(v) { return v/1000000 + 'M'; } } },
                    x: { grid: { display: false } }
                }
            }
        });

        // 2. Biểu đồ Tròn (Pie Chart) - Giữ nguyên
        var ctxPie = document.getElementById("pieChart");

        var pieLabels = [];
        var pieData = [];
        var pieColors = [];

        @if (isBoss && Model.SelectedStoreId == null)
        {
            <text>
                pieLabels = ["Hà Nội", "Đà Nẵng", "TP.HCM"];
                pieData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.StoreRevenueComparison));
                pieColors = ["#4e73df", "#f6c23e", "#1cc88a"];
            </text>
        }
        else
        {
            <text>
                pieLabels = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.CategoryLabels));
                pieData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.CategoryValues));
                pieColors = ["#4e73df", "#1cc88a", "#36b9cc", "#f6c23e", "#e74a3b", "#858796"];
            </text>
        }

        new Chart(ctxPie, {
            type: 'doughnut',
            data: {
                labels: pieLabels,
                datasets: [{
                    data: pieData,
                    backgroundColor: pieColors,
                    hoverOffset: 4
                }]
            },
            options: { maintainAspectRatio: false, plugins: { legend: { position: 'bottom' } } }
        });
    </script>
}