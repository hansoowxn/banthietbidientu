@model banthietbidientu.Models.BaoCaoViewModel
@{
    ViewData["Title"] = "Báo cáo thống kê";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">

    <!-- Header Trang -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1 text-dark">Báo Cáo Kinh Doanh</h4>
            <small class="text-muted">Cập nhật lúc: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</small>
        </div>
        <button class="btn btn-primary btn-sm shadow-sm" onclick="window.print()">
            <i class="bi bi-printer me-2"></i> In Báo Cáo
        </button>
    </div>

    <!-- 4 Thẻ thống kê tổng quan -->
    <div class="row g-3 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(45deg, #4e73df, #224abe);">
                <div class="card-body text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-white-50 small text-uppercase fw-bold mb-1">Tổng Doanh Thu</div>
                            <div class="h3 mb-0 fw-bold">@Model.TongDoanhThu.ToString("#,##0") đ</div>
                        </div>
                        <div class="fs-1 text-white-50"><i class="bi bi-wallet2"></i></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-success small text-uppercase fw-bold mb-1">Sản phẩm đã bán</div>
                            <div class="h3 mb-0 fw-bold text-dark">@Model.TongSanPhamDaBan</div>
                        </div>
                        <div class="fs-1 text-gray-300"><i class="bi bi-box-seam"></i></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-info small text-uppercase fw-bold mb-1">Tổng giao dịch</div>
                            <div class="h3 mb-0 fw-bold text-dark">@Model.TongDonHang</div>
                        </div>
                        <div class="fs-1 text-gray-300"><i class="bi bi-receipt"></i></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-danger">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-danger small text-uppercase fw-bold mb-1">Sắp hết hàng</div>
                            <div class="h3 mb-0 fw-bold text-dark">@Model.SanPhamSapHet <small class="fs-6 text-muted">mã</small></div>
                        </div>
                        <div class="fs-1 text-gray-300"><i class="bi bi-exclamation-triangle"></i></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Khu vực Biểu đồ -->
    <div class="row g-3 mb-4">
        <!-- Biểu đồ Doanh thu (Line Chart) -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3 border-0">
                    <h6 class="m-0 fw-bold text-primary"><i class="bi bi-graph-up-arrow me-2"></i>Biểu đồ doanh thu 7 ngày qua</h6>
                </div>
                <div class="card-body">
                    <div style="height: 350px;">
                        <canvas id="revenueChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Biểu đồ Top sản phẩm (Bar Chart) -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3 border-0">
                    <h6 class="m-0 fw-bold text-primary"><i class="bi bi-trophy me-2"></i>Top 5 Bán Chạy</h6>
                </div>
                <div class="card-body">
                    <div style="height: 350px;">
                        <canvas id="topProductChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bảng Khách hàng VIP -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3 border-0 d-flex justify-content-between align-items-center">
            <h6 class="m-0 fw-bold text-primary"><i class="bi bi-people-fill me-2"></i>Khách Hàng Tiềm Năng (VIP)</h6>
            <a href="@Url.Action("QuanLyTaiKhoan", "Admin")" class="btn btn-sm btn-outline-primary rounded-pill">Xem tất cả</a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Khách hàng</th>
                            <th class="text-center">Hạng thành viên</th>
                            <th>Email</th>
                            <th class="text-center">Số lần mua</th>
                            <th class="text-end pe-4">Tổng chi tiêu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.TopKhachHangs != null)
                        {
                            foreach (var khach in Model.TopKhachHangs)
                            {
                                string rankName = "Thành Viên";
                                string badgeClass = "bg-secondary";

                                // --- LOGIC QUAN TRỌNG: KIỂM TRA ROLE ---
                                if (khach.Role == "Admin")
                                {
                                    rankName = "👑 TỐI THƯỢNG";
                                    // Màu đỏ gradient quyền lực cho Admin
                                    badgeClass = "bg-danger bg-gradient text-white border border-danger shadow-sm";
                                }
                                else
                                {
                                    // Logic thường cho khách dựa trên tiền
                                    if (khach.TongChiTieu >= 100000000) { rankName = "💎 KIM CƯƠNG"; badgeClass = "bg-dark text-white border border-info"; }
                                    else if (khach.TongChiTieu >= 50000000) { rankName = "🏆 BẠCH KIM"; badgeClass = "bg-info text-dark"; }
                                    else if (khach.TongChiTieu >= 20000000) { rankName = "🥇 VÀNG"; badgeClass = "bg-warning text-dark"; }
                                    else if (khach.TongChiTieu >= 10000000) { rankName = "🥈 BẠC"; badgeClass = "bg-secondary text-white"; }
                                }

                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold text-dark">@khach.HoTen</div>
                                        @if (khach.Role == "Admin")
                                        {
                                            <span class="badge bg-light text-danger border border-danger mt-1" style="font-size: 9px;">ADMINISTRATOR</span>
                                        }
                                    </td>

                                    <td class="text-center">
                                        <span class="badge rounded-pill @badgeClass px-3 py-2" style="min-width: 110px;">@rankName</span>
                                    </td>

                                    <td class="text-muted small">@khach.Email</td>
                                    <td class="text-center"><span class="badge bg-light text-dark border rounded-pill px-3">@khach.SoLanMua đơn</span></td>
                                    <td class="text-end pe-4 fw-bold text-success">@khach.TongChiTieu.ToString("#,##0") đ</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm mt-4">
        <div class="card-header bg-white py-3 border-0 d-flex justify-content-between align-items-center">
            <h6 class="m-0 fw-bold text-success"><i class="bi bi-cash-coin me-2"></i>Chi Tiết Lợi Nhuận Sản Phẩm</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Sản phẩm</th>
                            <th class="text-center">Số lượng bán</th>
                            <th class="text-end">Doanh thu</th>
                            <th class="text-end">Giá vốn</th>
                            <th class="text-end pe-4">Lợi nhuận</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.BaoCaoLoiNhuan != null)
                        {
                            foreach (var item in Model.BaoCaoLoiNhuan)
                            {
                                // Tính tỷ suất lợi nhuận (Margin)
                                double margin = item.DoanhThu > 0 ? (double)(item.LoiNhuan / item.DoanhThu) * 100 : 0;
                                string marginClass = margin >= 30 ? "text-success" : (margin >= 10 ? "text-warning" : "text-danger");

                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <img src="@(item.HinhAnh ?? "/image/logo.png")" class="rounded border me-3" style="width: 40px; height: 40px; object-fit: cover;">
                                            <div class="fw-bold text-dark">@item.TenSanPham</div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-light text-dark border">@item.SoLuongBan</span>
                                    </td>
                                    <td class="text-end fw-bold text-primary">@item.DoanhThu.ToString("#,##0") đ</td>
                                    <td class="text-end text-muted">@item.GiaVon.ToString("#,##0") đ</td>
                                    <td class="text-end pe-4">
                                        <div class="fw-bold text-success">@item.LoiNhuan.ToString("#,##0") đ</div>
                                        <small class="@marginClass fw-bold" style="font-size: 10px;">
                                            (@margin.ToString("0.0")%)
                                            @if (margin >= 30)
                                            {
                                                <i class="bi bi-arrow-up-right"></i>
                                            }
                                        </small>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {

            // --- 1. BIỂU ĐỒ DOANH THU (Giao diện mới: Gradient & Smooth) ---
            const ctxRevenue = document.getElementById('revenueChart').getContext('2d');

            // Tạo màu gradient bóng đổ
            let gradient = ctxRevenue.createLinearGradient(0, 0, 0, 400);
            gradient.addColorStop(0, 'rgba(13, 110, 253, 0.5)'); // Xanh đậm ở trên
            gradient.addColorStop(1, 'rgba(13, 110, 253, 0.0)'); // Nhạt dần xuống dưới

            const labelsNgay = @Html.Raw(Json.Serialize(Model.LabelsNgay));
            const dataDoanhThu = @Html.Raw(Json.Serialize(Model.ValuesDoanhThu));

            new Chart(ctxRevenue, {
                type: 'line',
                data: {
                    labels: labelsNgay,
                    datasets: [{
                        label: 'Doanh thu',
                        data: dataDoanhThu,
                        backgroundColor: gradient,
                        borderColor: '#0d6efd',
                        borderWidth: 3,
                        pointBackgroundColor: '#ffffff',
                        pointBorderColor: '#0d6efd',
                        pointBorderWidth: 2,
                        pointRadius: 5,
                        pointHoverRadius: 7,
                        fill: true,
                        tension: 0.4 // Độ cong mềm mại (quan trọng)
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            backgroundColor: 'rgba(0, 0, 0, 0.8)',
                            padding: 12,
                            titleFont: { size: 14 },
                            bodyFont: { size: 14, weight: 'bold' },
                            callbacks: {
                                label: function(context) {
                                    let value = context.raw;
                                    return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(value);
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { borderDash: [5, 5], color: '#e9ecef' },
                            ticks: {
                                callback: function(value) {
                                    // Rút gọn số (1tr, 2tr...)
                                    if(value >= 1000000000) return (value/1000000000) + ' Tỷ';
                                    if(value >= 1000000) return (value/1000000) + ' Tr';
                                    return value;
                                },
                                font: { size: 11 }
                            }
                        },
                        x: {
                            grid: { display: false },
                            ticks: { font: { size: 11 } }
                        }
                    },
                    interaction: {
                        mode: 'index',
                        intersect: false,
                    },
                }
            });

            // --- 2. BIỂU ĐỒ TOP SẢN PHẨM (Fix số nguyên) ---
            const ctxProduct = document.getElementById('topProductChart').getContext('2d');
            const labelsSP = @Html.Raw(Json.Serialize(Model.TopSanPhamTen));
            const dataSP = @Html.Raw(Json.Serialize(Model.TopSanPhamSoLuong));

            new Chart(ctxProduct, {
                type: 'bar',
                data: {
                    labels: labelsSP,
                    datasets: [{
                        label: 'Số lượng bán',
                        data: dataSP,
                        backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b'],
                        borderRadius: 5,
                        barThickness: 20
                    }]
                },
                options: {
                    indexAxis: 'y', // Biểu đồ ngang
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        x: {
                            grid: { display: false },
                            ticks: {
                                stepSize: 1, // Bước nhảy là 1 (không có số lẻ)
                                precision: 0
                            }
                        },
                        y: { grid: { display: false } }
                    }
                }
            });
        });
    </script>
}