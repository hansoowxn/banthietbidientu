@model banthietbidientu.Models.SanPham

@{
    ViewData["Title"] = "Thêm sản phẩm mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-plus-circle me-2"></i>Thêm sản phẩm mới</h5>
            <a asp-action="Index" asp-controller="ProductManager" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left me-2"></i>Quay lại
            </a>
        </div>
        <div class="card-body p-4">
            <form asp-action="ThemSanPham" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Tên sản phẩm</label>
                            <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm..." required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Category" class="form-label fw-bold">Danh mục</label>
                                <select asp-for="Category" class="form-select">
                                    <option value="Điện thoại">Điện thoại</option>
                                    <option value="Laptop">Laptop</option>
                                    <option value="Tablet">Tablet</option>
                                    <option value="Smartwatch">Smartwatch</option>
                                    <option value="Phụ kiện">Phụ kiện</option>
                                    <option value="TV">TV</option>
                                    <option value="Khác">Khác</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ImageUrl" class="form-label fw-bold">Link Hình ảnh</label>
                                <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label fw-bold text-success">Giá Bán (VNĐ)</label>
                                <input asp-for="Price" class="form-control" type="number" min="0" required />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="GiaNhap" class="form-label fw-bold text-danger">Giá Nhập (Giá Vốn)</label>
                                <input asp-for="GiaNhap" class="form-control" type="number" min="0" value="0" required />
                                <div class="form-text text-muted">Dùng để tính lãi ròng. Khách hàng không thấy giá này.</div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Mô tả ngắn</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card bg-light border-0">
                            <div class="card-body">
                                <h6 class="fw-bold mb-3 text-primary"><i class="bi bi-boxes me-2"></i>Phân bổ kho hàng</h6>

                                <div class="mb-3">
                                    <label class="form-label">Kho Hà Nội (Miền Bắc)</label>
                                    <input type="number" name="slHaNoi" class="form-control" min="0" value="0" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Kho Đà Nẵng (Miền Trung)</label>
                                    <input type="number" name="slDaNang" class="form-control" min="0" value="0" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Kho TP.HCM (Miền Nam)</label>
                                    <input type="number" name="slHCM" class="form-control" min="0" value="0" />
                                </div>

                                <div class="alert alert-info small mb-0">
                                    <i class="bi bi-info-circle me-1"></i> Tổng số lượng sẽ được tự động cập nhật.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-primary btn-lg"><i class="bi bi-save me-2"></i>Thêm sản phẩm</button>
                </div>
            </form>
        </div>
    </div>
</div>