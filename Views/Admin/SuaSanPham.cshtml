@model banthietbidientu.Models.SanPham
@{
    ViewData["Title"] = "Cập nhật sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3 border-bottom">
                <div class="d-flex align-items-center">
                    <a href="@Url.Action("Index", "ProductManager")" class="btn btn-light btn-sm rounded-circle me-3">
                        <i class="bi bi-arrow-left"></i>
                    </a>
                    <h5 class="mb-0 fw-bold text-primary">Cập nhật sản phẩm: @Model.Name</h5>
                </div>
            </div>

            <div class="card-body p-4">
                <form asp-action="SuaSanPham" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div class="row g-4">
                        <div class="col-md-8">
                            <h6 class="text-uppercase text-muted small fw-bold mb-3">Thông tin chung</h6>

                            <div class="form-floating mb-3">
                                <input asp-for="Name" class="form-control" placeholder="Tên sản phẩm" required />
                                <label asp-for="Name">Tên sản phẩm</label>
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-secondary small">Danh mục</label>
                                    <select asp-for="Category" class="form-select py-2">
                                        <option value="Laptop">Laptop</option>
                                        <option value="Điện thoại">Điện thoại</option>
                                        <option value="Máy tính bảng">Máy tính bảng</option>
                                        <option value="Phụ kiện">Phụ kiện</option>
                                        <option value="SmartWatch">Đồng hồ thông minh</option>
                                        <option value="Khác">Khác</option>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-secondary small">Giá bán (VNĐ)</label>
                                    <div class="input-group">
                                        <input asp-for="Price" type="number" class="form-control" />
                                        <span class="input-group-text">₫</span>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label text-secondary small">Link Hình ảnh</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-link-45deg"></i></span>
                                    <input asp-for="ImageUrl" class="form-control" placeholder="https://..." id="imgUrlInput" />
                                </div>
                            </div>

                        </div>

                        <div class="col-md-4">
                            <div class="bg-light p-3 rounded-3 mb-4">
                                <h6 class="text-uppercase text-muted small fw-bold mb-3">Phân bổ kho hàng</h6>
                                <div class="alert alert-info small py-2">
                                    <i class="bi bi-info-circle me-1"></i> Cập nhật số lượng trực tiếp tại từng kho.
                                </div>

                                <div class="mb-2">
                                    <label class="form-label small">Kho Hà Nội</label>
                                    <input type="number" name="slHaNoi" value="@ViewBag.SlHaNoi" class="form-control text-center fw-bold" min="0" />
                                </div>
                                <div class="mb-2">
                                    <label class="form-label small">Kho Đà Nẵng</label>
                                    <input type="number" name="slDaNang" value="@ViewBag.SlDaNang" class="form-control text-center fw-bold" min="0" />
                                </div>
                                <div class="mb-2">
                                    <label class="form-label small">Kho TP.HCM</label>
                                    <input type="number" name="slHCM" value="@ViewBag.SlHCM" class="form-control text-center fw-bold" min="0" />
                                </div>
                            </div>

                            <div class="text-center">
                                <label class="form-label small text-muted">Ảnh xem trước</label>
                                <div class="border rounded p-2 bg-white d-flex align-items-center justify-content-center" style="height: 200px; overflow: hidden;">
                                    <img id="imgPreview" src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/image/no-image.png" : Model.ImageUrl)" class="img-fluid" style="max-height: 100%;" onerror="this.src='https://via.placeholder.com/200?text=No+Image'" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-4 pt-3 border-top gap-2">
                        <a href="@Url.Action("Index", "ProductManager")" class="btn btn-light px-4">Hủy bỏ</a>
                        <button type="submit" class="btn btn-primary px-4 fw-bold">
                            <i class="bi bi-check2-circle me-1"></i> Lưu thay đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Script xem trước ảnh khi nhập link
    document.getElementById('imgUrlInput').addEventListener('input', function() {
        var url = this.value;
        if(url) document.getElementById('imgPreview').src = url;
    });
</script>