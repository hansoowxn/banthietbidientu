@model banthietbidientu.Models.SanPham

@{
    ViewData["Title"] = "Cập nhật sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold text-warning"><i class="bi bi-pencil-square me-2"></i>Cập nhật sản phẩm</h5>
            <a asp-action="Index" asp-controller="ProductManager" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left me-2"></i>Quay lại
            </a>
        </div>
        <div class="card-body p-4">
            <form asp-action="SuaSanPham" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Tên sản phẩm</label>
                            <input asp-for="Name" class="form-control" required />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Category" class="form-label fw-bold">Danh mục</label>
                                <select asp-for="Category" class="form-select">
                                    <option value="Điện thoại">Điện thoại</option>
                                    <option value="Laptop">Laptop</option>
                                    <option value="Tablet">Tablet</option>
                                    <option value="Smartwatch">Smartwatch</option>
                                    <option value="Phụ kiện">Phụ kiện</option>
                                    <option value="TV">TV</option>
                                    <option value="Khác">Khác</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ImageUrl" class="form-label fw-bold">Link Hình ảnh</label>
                                <input asp-for="ImageUrl" class="form-control" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label fw-bold text-success">Giá Bán</label>
                                <input asp-for="Price" class="form-control" type="number" min="0" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="GiaNhap" class="form-label fw-bold text-danger">Giá Nhập (Giá Vốn)</label>
                                <input asp-for="GiaNhap" class="form-control" type="number" min="0" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Mô tả ngắn</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card bg-light border-0">
                            <div class="card-body">
                                <h6 class="fw-bold mb-3 text-primary"><i class="bi bi-boxes me-2"></i>Điều chỉnh kho</h6>

                                <div class="mb-3">
                                    <label class="form-label">Kho Hà Nội</label>
                                    <input type="number" name="slHaNoi" class="form-control" min="0" value="@ViewBag.SlHaNoi" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Kho Đà Nẵng</label>
                                    <input type="number" name="slDaNang" class="form-control" min="0" value="@ViewBag.SlDaNang" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Kho TP.HCM</label>
                                    <input type="number" name="slHCM" class="form-control" min="0" value="@ViewBag.SlHCM" />
                                </div>
                            </div>
                        </div>

                        <div class="mt-3 text-center">
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail" style="max-height: 150px;">
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-warning btn-lg text-white"><i class="bi bi-check-circle me-2"></i>Cập nhật sản phẩm</button>
                </div>
            </form>
        </div>
    </div>
</div>